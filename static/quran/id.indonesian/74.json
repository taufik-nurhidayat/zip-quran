{
  "number": 74,
  "name": "سُورَةُ المُدَّثِّرِ",
  "englishName": "Al-Muddaththir",
  "englishNameTranslation": "The Cloaked One",
  "revelationType": "Meccan",
  "numberOfAyahs": 56,
  "ayahs": [
    {
      "number": 5496,
      "text": "Hai orang yang berkemul (berselimut),",
      "numberInSurah": 1,
      "juz": 29,
      "manzil": 7,
      "page": 575,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 5497,
      "text": "bangunlah, lalu berilah peringatan!",
      "numberInSurah": 2,
      "juz": 29,
      "manzil": 7,
      "page": 575,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 5498,
      "text": "dan Tuhanmu agungkanlah!",
      "numberInSurah": 3,
      "juz": 29,
      "manzil": 7,
      "page": 575,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 5499,
      "text": "dan pakaianmu bersihkanlah,",
      "numberInSurah": 4,
      "juz": 29,
      "manzil": 7,
      "page": 575,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 5500,
      "text": "dan perbuatan dosa tinggalkanlah,",
      "numberInSurah": 5,
      "juz": 29,
      "manzil": 7,
      "page": 575,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 5501,
      "text": "dan janganlah kamu memberi (dengan maksud) memperoleh (balasan) yang lebih banyak.",
      "numberInSurah": 6,
      "juz": 29,
      "manzil": 7,
      "page": 575,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 5502,
      "text": "Dan untuk (memenuhi perintah) Tuhanmu, bersabarlah.",
      "numberInSurah": 7,
      "juz": 29,
      "manzil": 7,
      "page": 575,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 5503,
      "text": "Apabila ditiup sangkakala,",
      "numberInSurah": 8,
      "juz": 29,
      "manzil": 7,
      "page": 575,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 5504,
      "text": "maka waktu itu adalah waktu (datangnya) hari yang sulit,",
      "numberInSurah": 9,
      "juz": 29,
      "manzil": 7,
      "page": 575,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 5505,
      "text": "bagi orang-orang kafir lagi tidak mudah.",
      "numberInSurah": 10,
      "juz": 29,
      "manzil": 7,
      "page": 575,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 5506,
      "text": "Biarkanlah Aku bertindak terhadap orang yang Aku telah menciptakannya sendirian.",
      "numberInSurah": 11,
      "juz": 29,
      "manzil": 7,
      "page": 575,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 5507,
      "text": "Dan Aku jadikan baginya harta benda yang banyak,",
      "numberInSurah": 12,
      "juz": 29,
      "manzil": 7,
      "page": 575,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 5508,
      "text": "dan anak-anak yang selalu bersama dia,",
      "numberInSurah": 13,
      "juz": 29,
      "manzil": 7,
      "page": 575,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 5509,
      "text": "dan Ku-lapangkan baginya (rezeki dan kekuasaan) dengan selapang-lapangnya,",
      "numberInSurah": 14,
      "juz": 29,
      "manzil": 7,
      "page": 575,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 5510,
      "text": "kemudian dia ingin sekali supaya Aku menambahnya.",
      "numberInSurah": 15,
      "juz": 29,
      "manzil": 7,
      "page": 575,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 5511,
      "text": "Sekali-kali tidak (akan Aku tambah), karena sesungguhnya dia menentang ayat-ayat Kami (Al Quran).",
      "numberInSurah": 16,
      "juz": 29,
      "manzil": 7,
      "page": 575,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 5512,
      "text": "Aku akan membebaninya mendaki pendakian yang memayahkan.",
      "numberInSurah": 17,
      "juz": 29,
      "manzil": 7,
      "page": 575,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 5513,
      "text": "Sesungguhnya dia telah memikirkan dan menetapkan (apa yang ditetapkannya),",
      "numberInSurah": 18,
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 5514,
      "text": "maka celakalah dia! Bagaimana dia menetapkan?,",
      "numberInSurah": 19,
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 5515,
      "text": "kemudian celakalah dia! Bagaimanakah dia menetapkan?,",
      "numberInSurah": 20,
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 5516,
      "text": "kemudian dia memikirkan,",
      "numberInSurah": 21,
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 5517,
      "text": "sesudah itu dia bermasam muka dan merengut,",
      "numberInSurah": 22,
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 5518,
      "text": "kemudian dia berpaling (dari kebenaran) dan menyombongkan diri,",
      "numberInSurah": 23,
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 5519,
      "text": "lalu dia berkata: \"(Al Quran) ini tidak lain hanyalah sihir yang dipelajari (dari orang-orang dahulu),",
      "numberInSurah": 24,
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 5520,
      "text": "ini tidak lain hanyalah perkataan manusia\".",
      "numberInSurah": 25,
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 5521,
      "text": "Aku akan memasukkannya ke dalam (neraka) Saqar.",
      "numberInSurah": 26,
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 5522,
      "text": "Tahukah kamu apakah (neraka) Saqar itu?",
      "numberInSurah": 27,
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 5523,
      "text": "Saqar itu tidak meninggalkan dan tidak membiarkan.",
      "numberInSurah": 28,
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 5524,
      "text": "(Neraka Saqar) adalah pembakar kulit manusia.",
      "numberInSurah": 29,
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 5525,
      "text": "Dan di atasnya ada sembilan belas (malaikat penjaga).",
      "numberInSurah": 30,
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 5526,
      "text": "Dan tiada Kami jadikan penjaga neraka itu melainkan dari malaikat: dan tidaklah Kami menjadikan bilangan mereka itu melainkan untuk jadi cobaan bagi orang-orang kafir, supaya orang-orang yang diberi Al-Kitab menjadi yakin dan supaya orang yang beriman bertambah imannya dan supaya orang-orang yang diberi Al Kitab dan orng-orang mukmin itu tidak ragu-ragu dan supaya orang-orang yang di dalam hatinya ada penyakit dan orang-orang kafir (mengatakan): \"Apakah yang dikehendaki Allah dengan bilangan ini sebagai suatu perumpamaan?\" Demikianlah Allah membiarkan sesat orang-orang yang dikehendaki-Nya dan memberi petunjuk kepada siapa yang dikehendaki-Nya. Dan tidak ada yang mengetahui tentara Tuhanmu melainkan Dia sendiri. Dan Saqar itu tiada lain hanyalah peringatan bagi manusia.",
      "numberInSurah": 31,
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 510,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 5527,
      "text": "Sekali-kali tidak, demi bulan,",
      "numberInSurah": 32,
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 5528,
      "text": "dan malam ketika telah berlalu,",
      "numberInSurah": 33,
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 5529,
      "text": "dan subuh apabila mulai terang.",
      "numberInSurah": 34,
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 5530,
      "text": "Sesungguhnya Saqar itu adalah salah satu bencana yang amat besar,",
      "numberInSurah": 35,
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 5531,
      "text": "sebagai ancaman bagi manusia.",
      "numberInSurah": 36,
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 5532,
      "text": "(Yaitu) bagi siapa di antaramu yang berkehendak akan maju atau mundur.",
      "numberInSurah": 37,
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 5533,
      "text": "Tiap-tiap diri bertanggung jawab atas apa yang telah diperbuatnya,",
      "numberInSurah": 38,
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 5534,
      "text": "kecuali golongan kanan,",
      "numberInSurah": 39,
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 5535,
      "text": "berada di dalam surga, mereka tanya menanya,",
      "numberInSurah": 40,
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 5536,
      "text": "tentang (keadaan) orang-orang yang berdosa,",
      "numberInSurah": 41,
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 5537,
      "text": "\"Apakah yang memasukkan kamu ke dalam Saqar (neraka)?\"",
      "numberInSurah": 42,
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 5538,
      "text": "Mereka menjawab: \"Kami dahulu tidak termasuk orang-orang yang mengerjakan shalat,",
      "numberInSurah": 43,
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 5539,
      "text": "dan kami tidak (pula) memberi makan orang miskin,",
      "numberInSurah": 44,
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 5540,
      "text": "dan adalah kami membicarakan yang bathil, bersama dengan orang-orang yang membicarakannya,",
      "numberInSurah": 45,
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 5541,
      "text": "dan adalah kami mendustakan hari pembalasan,",
      "numberInSurah": 46,
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 5542,
      "text": "hingga datang kepada kami kematian\".",
      "numberInSurah": 47,
      "juz": 29,
      "manzil": 7,
      "page": 576,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 5543,
      "text": "Maka tidak berguna lagi bagi mereka syafa'at dari orang-orang yang memberikan syafa'at.",
      "numberInSurah": 48,
      "juz": 29,
      "manzil": 7,
      "page": 577,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 5544,
      "text": "Maka mengapa mereka (orang-orang kafir) berpaling dari peringatan (Allah)?,",
      "numberInSurah": 49,
      "juz": 29,
      "manzil": 7,
      "page": 577,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 5545,
      "text": "seakan-akan mereka itu keledai liar yang lari terkejut,",
      "numberInSurah": 50,
      "juz": 29,
      "manzil": 7,
      "page": 577,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 5546,
      "text": "lari daripada singa.",
      "numberInSurah": 51,
      "juz": 29,
      "manzil": 7,
      "page": 577,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 5547,
      "text": "Bahkan tiap-tiap orang dari mereka berkehendak supaya diberikan kepadanya lembaran-lembaran yang terbuka.",
      "numberInSurah": 52,
      "juz": 29,
      "manzil": 7,
      "page": 577,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 5548,
      "text": "Sekali-kali tidak. Sebenarnya mereka tidak takut kepada negeri akhirat.",
      "numberInSurah": 53,
      "juz": 29,
      "manzil": 7,
      "page": 577,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 5549,
      "text": "Sekali-kali tidak demikian halnya. Sesungguhnya Al Quran itu adalah peringatan.",
      "numberInSurah": 54,
      "juz": 29,
      "manzil": 7,
      "page": 577,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 5550,
      "text": "Maka barangsiapa menghendaki, niscaya dia mengambil pelajaran daripadanya (Al Quran).",
      "numberInSurah": 55,
      "juz": 29,
      "manzil": 7,
      "page": 577,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    },
    {
      "number": 5551,
      "text": "Dan mereka tidak akan mengambil pelajaran daripadanya kecuali (jika) Allah menghendakinya. Dia (Allah) adalah Tuhan Yang patut (kita) bertakwa kepada-Nya dan berhak memberi ampun.",
      "numberInSurah": 56,
      "juz": 29,
      "manzil": 7,
      "page": 577,
      "ruku": 511,
      "hizbQuarter": 230,
      "sajda": false
    }
  ],
