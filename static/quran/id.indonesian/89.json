{
  "number": 89,
  "name": "سُورَةُ الفَجۡرِ",
  "englishName": "Al-Fajr",
  "englishNameTranslation": "The Dawn",
  "revelationType": "Meccan",
  "numberOfAyahs": 30,
  "ayahs": [
    {
      "number": 5994,
      "text": "Demi fajar,",
      "numberInSurah": 1,
      "juz": 30,
      "manzil": 7,
      "page": 593,
      "ruku": 531,
      "hizbQuarter": 237,
      "sajda": false
    },
    {
      "number": 5995,
      "text": "dan malam yang sepuluh,",
      "numberInSurah": 2,
      "juz": 30,
      "manzil": 7,
      "page": 593,
      "ruku": 531,
      "hizbQuarter": 237,
      "sajda": false
    },
    {
      "number": 5996,
      "text": "dan yang genap dan yang ganjil,",
      "numberInSurah": 3,
      "juz": 30,
      "manzil": 7,
      "page": 593,
      "ruku": 531,
      "hizbQuarter": 237,
      "sajda": false
    },
    {
      "number": 5997,
      "text": "dan malam bila berlalu.",
      "numberInSurah": 4,
      "juz": 30,
      "manzil": 7,
      "page": 593,
      "ruku": 531,
      "hizbQuarter": 237,
      "sajda": false
    },
    {
      "number": 5998,
      "text": "Pada yang demikian itu terdapat sumpah (yang dapat diterima) oleh orang-orang yang berakal.",
      "numberInSurah": 5,
      "juz": 30,
      "manzil": 7,
      "page": 593,
      "ruku": 531,
      "hizbQuarter": 237,
      "sajda": false
    },
    {
      "number": 5999,
      "text": "Apakah kamu tidak memperhatikan bagaimana Tuhanmu berbuat terhadap kaum 'Aad?",
      "numberInSurah": 6,
      "juz": 30,
      "manzil": 7,
      "page": 593,
      "ruku": 531,
      "hizbQuarter": 237,
      "sajda": false
    },
    {
      "number": 6000,
      "text": "(yaitu) penduduk Iram yang mempunyai bangunan-bangunan yang tinggi,",
      "numberInSurah": 7,
      "juz": 30,
      "manzil": 7,
      "page": 593,
      "ruku": 531,
      "hizbQuarter": 237,
      "sajda": false
    },
    {
      "number": 6001,
      "text": "yang belum pernah dibangun (suatu kota) seperti itu, di negeri-negeri lain,",
      "numberInSurah": 8,
      "juz": 30,
      "manzil": 7,
      "page": 593,
      "ruku": 531,
      "hizbQuarter": 237,
      "sajda": false
    },
    {
      "number": 6002,
      "text": "dan kaum Tsamud yang memotong batu-batu besar di lembah,",
      "numberInSurah": 9,
      "juz": 30,
      "manzil": 7,
      "page": 593,
      "ruku": 531,
      "hizbQuarter": 237,
      "sajda": false
    },
    {
      "number": 6003,
      "text": "dan kaum Fir'aun yang mempunyai pasak-pasak (tentara yang banyak),",
      "numberInSurah": 10,
      "juz": 30,
      "manzil": 7,
      "page": 593,
      "ruku": 531,
      "hizbQuarter": 237,
      "sajda": false
    },
    {
      "number": 6004,
      "text": "yang berbuat sewenang-wenang dalam negeri,",
      "numberInSurah": 11,
      "juz": 30,
      "manzil": 7,
      "page": 593,
      "ruku": 531,
      "hizbQuarter": 237,
      "sajda": false
    },
    {
      "number": 6005,
      "text": "lalu mereka berbuat banyak kerusakan dalam negeri itu,",
      "numberInSurah": 12,
      "juz": 30,
      "manzil": 7,
      "page": 593,
      "ruku": 531,
      "hizbQuarter": 237,
      "sajda": false
    },
    {
      "number": 6006,
      "text": "karena itu Tuhanmu menimpakan kepada mereka cemeti azab,",
      "numberInSurah": 13,
      "juz": 30,
      "manzil": 7,
      "page": 593,
      "ruku": 531,
      "hizbQuarter": 237,
      "sajda": false
    },
    {
      "number": 6007,
      "text": "sesungguhnya Tuhanmu benar-benar mengawasi.",
      "numberInSurah": 14,
      "juz": 30,
      "manzil": 7,
      "page": 593,
      "ruku": 531,
      "hizbQuarter": 237,
      "sajda": false
    },
    {
      "number": 6008,
      "text": "Adapun manusia apabila Tuhannya mengujinya lalu dia dimuliakan-Nya dan diberi-Nya kesenangan, maka dia akan berkata: \"Tuhanku telah memuliakanku\".",
      "numberInSurah": 15,
      "juz": 30,
      "manzil": 7,
      "page": 593,
      "ruku": 531,
      "hizbQuarter": 237,
      "sajda": false
    },
    {
      "number": 6009,
      "text": "Adapun bila Tuhannya mengujinya lalu membatasi rezekinya maka dia berkata: \"Tuhanku menghinakanku\".",
      "numberInSurah": 16,
      "juz": 30,
      "manzil": 7,
      "page": 593,
      "ruku": 531,
      "hizbQuarter": 237,
      "sajda": false
    },
    {
      "number": 6010,
      "text": "Sekali-kali tidak (demikian), sebenarnya kamu tidak memuliakan anak yatim,",
      "numberInSurah": 17,
      "juz": 30,
      "manzil": 7,
      "page": 593,
      "ruku": 531,
      "hizbQuarter": 237,
      "sajda": false
    },
    {
      "number": 6011,
      "text": "dan kamu tidak saling mengajak memberi makan orang miskin,",
      "numberInSurah": 18,
      "juz": 30,
      "manzil": 7,
      "page": 593,
      "ruku": 531,
      "hizbQuarter": 237,
      "sajda": false
    },
    {
      "number": 6012,
      "text": "dan kamu memakan harta pusaka dengan cara mencampur baurkan (yang halal dan yang bathil),",
      "numberInSurah": 19,
      "juz": 30,
      "manzil": 7,
      "page": 593,
      "ruku": 531,
      "hizbQuarter": 237,
      "sajda": false
    },
    {
      "number": 6013,
      "text": "dan kamu mencintai harta benda dengan kecintaan yang berlebihan.",
      "numberInSurah": 20,
      "juz": 30,
      "manzil": 7,
      "page": 593,
      "ruku": 531,
      "hizbQuarter": 237,
      "sajda": false
    },
    {
      "number": 6014,
      "text": "Jangan (berbuat demikian). Apabila bumi digoncangkan berturut-turut,",
      "numberInSurah": 21,
      "juz": 30,
      "manzil": 7,
      "page": 593,
      "ruku": 531,
      "hizbQuarter": 237,
      "sajda": false
    },
    {
      "number": 6015,
      "text": "dan datanglah Tuhanmu; sedang malaikat berbaris-baris.",
      "numberInSurah": 22,
      "juz": 30,
      "manzil": 7,
      "page": 593,
      "ruku": 531,
      "hizbQuarter": 237,
      "sajda": false
    },
    {
      "number": 6016,
      "text": "Dan pada hari itu diperlihatkan neraka Jahannam; dan pada hari itu ingatlah manusia, akan tetapi tidak berguna lagi mengingat itu baginya.",
      "numberInSurah": 23,
      "juz": 30,
      "manzil": 7,
      "page": 593,
      "ruku": 531,
      "hizbQuarter": 237,
      "sajda": false
    },
    {
      "number": 6017,
      "text": "Dia mengatakan: \"Alangkah baiknya kiranya aku dahulu mengerjakan (amal saleh) untuk hidupku ini\".",
      "numberInSurah": 24,
      "juz": 30,
      "manzil": 7,
      "page": 594,
      "ruku": 531,
      "hizbQuarter": 237,
      "sajda": false
    },
    {
      "number": 6018,
      "text": "Maka pada hari itu tiada seorangpun yang menyiksa seperti siksa-Nya.",
      "numberInSurah": 25,
      "juz": 30,
      "manzil": 7,
      "page": 594,
      "ruku": 531,
      "hizbQuarter": 237,
      "sajda": false
    },
    {
      "number": 6019,
      "text": "dan tiada seorangpun yang mengikat seperti ikatan-Nya.",
      "numberInSurah": 26,
      "juz": 30,
      "manzil": 7,
      "page": 594,
      "ruku": 531,
      "hizbQuarter": 237,
      "sajda": false
    },
    {
      "number": 6020,
      "text": "Hai jiwa yang tenang.",
      "numberInSurah": 27,
      "juz": 30,
      "manzil": 7,
      "page": 594,
      "ruku": 531,
      "hizbQuarter": 237,
      "sajda": false
    },
    {
      "number": 6021,
      "text": "Kembalilah kepada Tuhanmu dengan hati yang puas lagi diridhai-Nya.",
      "numberInSurah": 28,
      "juz": 30,
      "manzil": 7,
      "page": 594,
      "ruku": 531,
      "hizbQuarter": 237,
      "sajda": false
    },
    {
      "number": 6022,
      "text": "Maka masuklah ke dalam jama'ah hamba-hamba-Ku,",
      "numberInSurah": 29,
      "juz": 30,
      "manzil": 7,
      "page": 594,
      "ruku": 531,
      "hizbQuarter": 237,
      "sajda": false
    },
    {
      "number": 6023,
      "text": "masuklah ke dalam surga-Ku.",
      "numberInSurah": 30,
      "juz": 30,
      "manzil": 7,
      "page": 594,
      "ruku": 531,
      "hizbQuarter": 237,
      "sajda": false
    }
  ],
