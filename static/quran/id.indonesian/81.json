{
  "number": 81,
  "name": "سُورَةُ التَّكۡوِيرِ",
  "englishName": "At-Takwir",
  "englishNameTranslation": "The Overthrowing",
  "revelationType": "Meccan",
  "numberOfAyahs": 29,
  "ayahs": [
    {
      "number": 5801,
      "text": "Apabila matahari digulung,",
      "numberInSurah": 1,
      "juz": 30,
      "manzil": 7,
      "page": 586,
      "ruku": 523,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 5802,
      "text": "dan apabila bintang-bintang berjatuhan,",
      "numberInSurah": 2,
      "juz": 30,
      "manzil": 7,
      "page": 586,
      "ruku": 523,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 5803,
      "text": "dan apabila gunung-gunung dihancurkan,",
      "numberInSurah": 3,
      "juz": 30,
      "manzil": 7,
      "page": 586,
      "ruku": 523,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 5804,
      "text": "dan apabila unta-unta yang bunting ditinggalkan (tidak diperdulikan)",
      "numberInSurah": 4,
      "juz": 30,
      "manzil": 7,
      "page": 586,
      "ruku": 523,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 5805,
      "text": "dan apabila binatang-binatang liar dikumpulkan,",
      "numberInSurah": 5,
      "juz": 30,
      "manzil": 7,
      "page": 586,
      "ruku": 523,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 5806,
      "text": "dan apabila lautan dijadikan meluap",
      "numberInSurah": 6,
      "juz": 30,
      "manzil": 7,
      "page": 586,
      "ruku": 523,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 5807,
      "text": "dan apabila ruh-ruh dipertemukan (dengan tubuh)",
      "numberInSurah": 7,
      "juz": 30,
      "manzil": 7,
      "page": 586,
      "ruku": 523,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 5808,
      "text": "dan apabila bayi-bayi perempuan yang dikubur hidup-hidup ditanya,",
      "numberInSurah": 8,
      "juz": 30,
      "manzil": 7,
      "page": 586,
      "ruku": 523,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 5809,
      "text": "karena dosa apakah dia dibunuh,",
      "numberInSurah": 9,
      "juz": 30,
      "manzil": 7,
      "page": 586,
      "ruku": 523,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 5810,
      "text": "dan apabila catatan-catatan (amal perbuatan manusia) dibuka,",
      "numberInSurah": 10,
      "juz": 30,
      "manzil": 7,
      "page": 586,
      "ruku": 523,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 5811,
      "text": "dan apabila langit dilenyapkan,",
      "numberInSurah": 11,
      "juz": 30,
      "manzil": 7,
      "page": 586,
      "ruku": 523,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 5812,
      "text": "dan apabila neraka Jahim dinyalakan,",
      "numberInSurah": 12,
      "juz": 30,
      "manzil": 7,
      "page": 586,
      "ruku": 523,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 5813,
      "text": "dan apabila surga didekatkan,",
      "numberInSurah": 13,
      "juz": 30,
      "manzil": 7,
      "page": 586,
      "ruku": 523,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 5814,
      "text": "maka tiap-tiap jiwa akan mengetahui apa yang telah dikerjakannya.",
      "numberInSurah": 14,
      "juz": 30,
      "manzil": 7,
      "page": 586,
      "ruku": 523,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 5815,
      "text": "Sungguh, Aku bersumpah dengan bintang-bintang,",
      "numberInSurah": 15,
      "juz": 30,
      "manzil": 7,
      "page": 586,
      "ruku": 523,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 5816,
      "text": "yang beredar dan terbenam,",
      "numberInSurah": 16,
      "juz": 30,
      "manzil": 7,
      "page": 586,
      "ruku": 523,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 5817,
      "text": "demi malam apabila telah hampir meninggalkan gelapnya,",
      "numberInSurah": 17,
      "juz": 30,
      "manzil": 7,
      "page": 586,
      "ruku": 523,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 5818,
      "text": "dan demi subuh apabila fajarnya mulai menyingsing,",
      "numberInSurah": 18,
      "juz": 30,
      "manzil": 7,
      "page": 586,
      "ruku": 523,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 5819,
      "text": "sesungguhnya Al Quran itu benar-benar firman (Allah yang dibawa oleh) utusan yang mulia (Jibril),",
      "numberInSurah": 19,
      "juz": 30,
      "manzil": 7,
      "page": 586,
      "ruku": 523,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 5820,
      "text": "yang mempunyai kekuatan, yang mempunyai kedudukan tinggi di sisi Allah yang mempunyai 'Arsy,",
      "numberInSurah": 20,
      "juz": 30,
      "manzil": 7,
      "page": 586,
      "ruku": 523,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 5821,
      "text": "yang ditaati di sana (di alam malaikat) lagi dipercaya.",
      "numberInSurah": 21,
      "juz": 30,
      "manzil": 7,
      "page": 586,
      "ruku": 523,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 5822,
      "text": "Dan temanmu (Muhammad) itu bukanlah sekali-kali orang yang gila.",
      "numberInSurah": 22,
      "juz": 30,
      "manzil": 7,
      "page": 586,
      "ruku": 523,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 5823,
      "text": "Dan sesungguhnya Muhammad itu melihat Jibril di ufuk yang terang.",
      "numberInSurah": 23,
      "juz": 30,
      "manzil": 7,
      "page": 586,
      "ruku": 523,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 5824,
      "text": "Dan dia (Muhammad) bukanlah orang yang bakhil untuk menerangkan yang ghaib.",
      "numberInSurah": 24,
      "juz": 30,
      "manzil": 7,
      "page": 586,
      "ruku": 523,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 5825,
      "text": "Dan Al Quran itu bukanlah perkataan syaitan yang terkutuk,",
      "numberInSurah": 25,
      "juz": 30,
      "manzil": 7,
      "page": 586,
      "ruku": 523,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 5826,
      "text": "maka ke manakah kamu akan pergi?",
      "numberInSurah": 26,
      "juz": 30,
      "manzil": 7,
      "page": 586,
      "ruku": 523,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 5827,
      "text": "Al Quran itu tiada lain hanyalah peringatan bagi semesta alam,",
      "numberInSurah": 27,
      "juz": 30,
      "manzil": 7,
      "page": 586,
      "ruku": 523,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 5828,
      "text": "(yaitu) bagi siapa di antara kamu yang mau menempuh jalan yang lurus.",
      "numberInSurah": 28,
      "juz": 30,
      "manzil": 7,
      "page": 586,
      "ruku": 523,
      "hizbQuarter": 234,
      "sajda": false
    },
    {
      "number": 5829,
      "text": "Dan kamu tidak dapat menghendaki (menempuh jalan itu) kecuali apabila dikehendaki Allah, Tuhan semesta alam.",
      "numberInSurah": 29,
      "juz": 30,
      "manzil": 7,
      "page": 586,
      "ruku": 523,
      "hizbQuarter": 234,
      "sajda": false
    }
  ],
