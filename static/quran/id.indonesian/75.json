{
  "number": 75,
  "name": "سُورَةُ القِيَامَةِ",
  "englishName": "Al-Qiyaama",
  "englishNameTranslation": "The Resurrection",
  "revelationType": "Meccan",
  "numberOfAyahs": 40,
  "ayahs": [
    {
      "number": 5552,
      "text": "Aku bersumpah demi hari kiamat,",
      "numberInSurah": 1,
      "juz": 29,
      "manzil": 7,
      "page": 577,
      "ruku": 512,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 5553,
      "text": "dan aku bersumpah dengan jiwa yang amat menyesali (dirinya sendiri).",
      "numberInSurah": 2,
      "juz": 29,
      "manzil": 7,
      "page": 577,
      "ruku": 512,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 5554,
      "text": "Apakah manusia mengira, bahwa Kami tidak akan mengumpulkan (kembali) tulang belulangnya?",
      "numberInSurah": 3,
      "juz": 29,
      "manzil": 7,
      "page": 577,
      "ruku": 512,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 5555,
      "text": "Bukan demikian, sebenarnya Kami kuasa menyusun (kembali) jari jemarinya dengan sempurna.",
      "numberInSurah": 4,
      "juz": 29,
      "manzil": 7,
      "page": 577,
      "ruku": 512,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 5556,
      "text": "Bahkan manusia itu hendak membuat maksiat terus menerus.",
      "numberInSurah": 5,
      "juz": 29,
      "manzil": 7,
      "page": 577,
      "ruku": 512,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 5557,
      "text": "Ia berkata: \"Bilakah hari kiamat itu?\"",
      "numberInSurah": 6,
      "juz": 29,
      "manzil": 7,
      "page": 577,
      "ruku": 512,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 5558,
      "text": "Maka apabila mata terbelalak (ketakutan),",
      "numberInSurah": 7,
      "juz": 29,
      "manzil": 7,
      "page": 577,
      "ruku": 512,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 5559,
      "text": "dan apabila bulan telah hilang cahayanya,",
      "numberInSurah": 8,
      "juz": 29,
      "manzil": 7,
      "page": 577,
      "ruku": 512,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 5560,
      "text": "dan matahari dan bulan dikumpulkan,",
      "numberInSurah": 9,
      "juz": 29,
      "manzil": 7,
      "page": 577,
      "ruku": 512,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 5561,
      "text": "pada hari itu manusia berkata: \"Ke mana tempat berlari?\"",
      "numberInSurah": 10,
      "juz": 29,
      "manzil": 7,
      "page": 577,
      "ruku": 512,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 5562,
      "text": "sekali-kali tidak! Tidak ada tempat berlindung!",
      "numberInSurah": 11,
      "juz": 29,
      "manzil": 7,
      "page": 577,
      "ruku": 512,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 5563,
      "text": "Hanya kepada Tuhanmu sajalah pada hari itu tempat kembali.",
      "numberInSurah": 12,
      "juz": 29,
      "manzil": 7,
      "page": 577,
      "ruku": 512,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 5564,
      "text": "Pada hari itu diberitakan kepada manusia apa yang telah dikerjakannya dan apa yang dilalaikannya.",
      "numberInSurah": 13,
      "juz": 29,
      "manzil": 7,
      "page": 577,
      "ruku": 512,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 5565,
      "text": "Bahkan manusia itu menjadi saksi atas dirinya sendiri,",
      "numberInSurah": 14,
      "juz": 29,
      "manzil": 7,
      "page": 577,
      "ruku": 512,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 5566,
      "text": "meskipun dia mengemukakan alasan-alasannya.",
      "numberInSurah": 15,
      "juz": 29,
      "manzil": 7,
      "page": 577,
      "ruku": 512,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 5567,
      "text": "Janganlah kamu gerakkan lidahmu untuk (membaca) Al Quran karena hendak cepat-cepat (menguasai)nya.",
      "numberInSurah": 16,
      "juz": 29,
      "manzil": 7,
      "page": 577,
      "ruku": 512,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 5568,
      "text": "Sesungguhnya atas tanggungan Kamilah mengumpulkannya (di dadamu) dan (membuatmu pandai) membacanya.",
      "numberInSurah": 17,
      "juz": 29,
      "manzil": 7,
      "page": 577,
      "ruku": 512,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 5569,
      "text": "Apabila Kami telah selesai membacakannya maka ikutilah bacaannya itu.",
      "numberInSurah": 18,
      "juz": 29,
      "manzil": 7,
      "page": 577,
      "ruku": 512,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 5570,
      "text": "Kemudian, sesungguhnya atas tanggungan Kamilah penjelasannya.",
      "numberInSurah": 19,
      "juz": 29,
      "manzil": 7,
      "page": 577,
      "ruku": 512,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 5571,
      "text": "Sekali-kali janganlah demikian. Sebenarnya kamu (hai manusia) mencintai kehidupan dunia,",
      "numberInSurah": 20,
      "juz": 29,
      "manzil": 7,
      "page": 578,
      "ruku": 512,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 5572,
      "text": "dan meninggalkan (kehidupan) akhirat.",
      "numberInSurah": 21,
      "juz": 29,
      "manzil": 7,
      "page": 578,
      "ruku": 512,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 5573,
      "text": "Wajah-wajah (orang-orang mukmin) pada hari itu berseri-seri.",
      "numberInSurah": 22,
      "juz": 29,
      "manzil": 7,
      "page": 578,
      "ruku": 512,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 5574,
      "text": "Kepada Tuhannyalah mereka melihat.",
      "numberInSurah": 23,
      "juz": 29,
      "manzil": 7,
      "page": 578,
      "ruku": 512,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 5575,
      "text": "Dan wajah-wajah (orang kafir) pada hari itu muram,",
      "numberInSurah": 24,
      "juz": 29,
      "manzil": 7,
      "page": 578,
      "ruku": 512,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 5576,
      "text": "mereka yakin bahwa akan ditimpakan kepadanya malapetaka yang amat dahsyat.",
      "numberInSurah": 25,
      "juz": 29,
      "manzil": 7,
      "page": 578,
      "ruku": 512,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 5577,
      "text": "Sekali-kali jangan. Apabila nafas (seseorang) telah (mendesak) sampai ke kerongkongan,",
      "numberInSurah": 26,
      "juz": 29,
      "manzil": 7,
      "page": 578,
      "ruku": 512,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 5578,
      "text": "dan dikatakan (kepadanya): \"Siapakah yang dapat menyembuhkan?\",",
      "numberInSurah": 27,
      "juz": 29,
      "manzil": 7,
      "page": 578,
      "ruku": 512,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 5579,
      "text": "dan dia yakin bahwa sesungguhnya itulah waktu perpisahan (dengan dunia),",
      "numberInSurah": 28,
      "juz": 29,
      "manzil": 7,
      "page": 578,
      "ruku": 512,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 5580,
      "text": "dan bertaut betis (kiri) dan betis (kanan),",
      "numberInSurah": 29,
      "juz": 29,
      "manzil": 7,
      "page": 578,
      "ruku": 512,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 5581,
      "text": "kepada Tuhanmulah pada hari itu kamu dihalau.",
      "numberInSurah": 30,
      "juz": 29,
      "manzil": 7,
      "page": 578,
      "ruku": 512,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 5582,
      "text": "Dan ia tidak mau membenarkan (Rasul dan Al Quran) dan tidak mau mengerjakan shalat,",
      "numberInSurah": 31,
      "juz": 29,
      "manzil": 7,
      "page": 578,
      "ruku": 513,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 5583,
      "text": "tetapi ia mendustakan (Rasul) dam berpaling (dari kebenaran),",
      "numberInSurah": 32,
      "juz": 29,
      "manzil": 7,
      "page": 578,
      "ruku": 513,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 5584,
      "text": "kemudian ia pergi kepada ahlinya dengan berlagak (sombong).",
      "numberInSurah": 33,
      "juz": 29,
      "manzil": 7,
      "page": 578,
      "ruku": 513,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 5585,
      "text": "Kecelakaanlah bagimu (hai orang kafir) dan kecelakaanlah bagimu,",
      "numberInSurah": 34,
      "juz": 29,
      "manzil": 7,
      "page": 578,
      "ruku": 513,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 5586,
      "text": "kemudian kecelakaanlah bagimu (hai orang kafir) dan kecelakaanlah bagimu.",
      "numberInSurah": 35,
      "juz": 29,
      "manzil": 7,
      "page": 578,
      "ruku": 513,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 5587,
      "text": "Apakah manusia mengira, bahwa ia akan dibiarkan begitu saja (tanpa pertanggung jawaban)?",
      "numberInSurah": 36,
      "juz": 29,
      "manzil": 7,
      "page": 578,
      "ruku": 513,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 5588,
      "text": "Bukankah dia dahulu setetes mani yang ditumpahkan (ke dalam rahim),",
      "numberInSurah": 37,
      "juz": 29,
      "manzil": 7,
      "page": 578,
      "ruku": 513,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 5589,
      "text": "kemudian mani itu menjadi segumpal darah, lalu Allah menciptakannya, dan menyempurnakannya,",
      "numberInSurah": 38,
      "juz": 29,
      "manzil": 7,
      "page": 578,
      "ruku": 513,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 5590,
      "text": "lalu Allah menjadikan daripadanya sepasang: laki-laki dan perempuan.",
      "numberInSurah": 39,
      "juz": 29,
      "manzil": 7,
      "page": 578,
      "ruku": 513,
      "hizbQuarter": 231,
      "sajda": false
    },
    {
      "number": 5591,
      "text": "Bukankah (Allah yang berbuat) demikian berkuasa (pula) menghidupkan orang mati?",
      "numberInSurah": 40,
      "juz": 29,
      "manzil": 7,
      "page": 578,
      "ruku": 513,
      "hizbQuarter": 231,
      "sajda": false
    }
  ],
