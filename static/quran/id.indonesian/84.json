{
  "number": 84,
  "name": "سُورَةُ الانشِقَاقِ",
  "englishName": "Al-Inshiqaaq",
  "englishNameTranslation": "The Splitting Open",
  "revelationType": "Meccan",
  "numberOfAyahs": 25,
  "ayahs": [
    {
      "number": 5885,
      "text": "Apabila langit terbelah,",
      "numberInSurah": 1,
      "juz": 30,
      "manzil": 7,
      "page": 589,
      "ruku": 526,
      "hizbQuarter": 236,
      "sajda": false
    },
    {
      "number": 5886,
      "text": "dan patuh kepada Tuhannya, dan sudah semestinya langit itu patuh,",
      "numberInSurah": 2,
      "juz": 30,
      "manzil": 7,
      "page": 589,
      "ruku": 526,
      "hizbQuarter": 236,
      "sajda": false
    },
    {
      "number": 5887,
      "text": "dan apabila bumi diratakan,",
      "numberInSurah": 3,
      "juz": 30,
      "manzil": 7,
      "page": 589,
      "ruku": 526,
      "hizbQuarter": 236,
      "sajda": false
    },
    {
      "number": 5888,
      "text": "dan dilemparkan apa yang ada di dalamnya dan menjadi kosong,",
      "numberInSurah": 4,
      "juz": 30,
      "manzil": 7,
      "page": 589,
      "ruku": 526,
      "hizbQuarter": 236,
      "sajda": false
    },
    {
      "number": 5889,
      "text": "dan patuh kepada Tuhannya, dan sudah semestinya bumi itu patuh, (pada waktu itu manusia akan mengetahui akibat perbuatannya).",
      "numberInSurah": 5,
      "juz": 30,
      "manzil": 7,
      "page": 589,
      "ruku": 526,
      "hizbQuarter": 236,
      "sajda": false
    },
    {
      "number": 5890,
      "text": "Hai manusia, sesungguhnya kamu telah bekerja dengan sungguh-sungguh menuju Tuhanmu, maka pasti kamu akan menemui-Nya.",
      "numberInSurah": 6,
      "juz": 30,
      "manzil": 7,
      "page": 589,
      "ruku": 526,
      "hizbQuarter": 236,
      "sajda": false
    },
    {
      "number": 5891,
      "text": "Adapun orang yang diberikan kitabnya dari sebelah kanannya,",
      "numberInSurah": 7,
      "juz": 30,
      "manzil": 7,
      "page": 589,
      "ruku": 526,
      "hizbQuarter": 236,
      "sajda": false
    },
    {
      "number": 5892,
      "text": "maka dia akan diperiksa dengan pemeriksaan yang mudah,",
      "numberInSurah": 8,
      "juz": 30,
      "manzil": 7,
      "page": 589,
      "ruku": 526,
      "hizbQuarter": 236,
      "sajda": false
    },
    {
      "number": 5893,
      "text": "dan dia akan kembali kepada kaumnya (yang sama-sama beriman) dengan gembira.",
      "numberInSurah": 9,
      "juz": 30,
      "manzil": 7,
      "page": 589,
      "ruku": 526,
      "hizbQuarter": 236,
      "sajda": false
    },
    {
      "number": 5894,
      "text": "Adapun orang-orang yang diberikan kitabnya dari belakang,",
      "numberInSurah": 10,
      "juz": 30,
      "manzil": 7,
      "page": 589,
      "ruku": 526,
      "hizbQuarter": 236,
      "sajda": false
    },
    {
      "number": 5895,
      "text": "maka dia akan berteriak: \"Celakalah aku\".",
      "numberInSurah": 11,
      "juz": 30,
      "manzil": 7,
      "page": 589,
      "ruku": 526,
      "hizbQuarter": 236,
      "sajda": false
    },
    {
      "number": 5896,
      "text": "Dan dia akan masuk ke dalam api yang menyala-nyala (neraka).",
      "numberInSurah": 12,
      "juz": 30,
      "manzil": 7,
      "page": 589,
      "ruku": 526,
      "hizbQuarter": 236,
      "sajda": false
    },
    {
      "number": 5897,
      "text": "Sesungguhnya dia dahulu (di dunia) bergembira di kalangan kaumnya (yang sama-sama kafir).",
      "numberInSurah": 13,
      "juz": 30,
      "manzil": 7,
      "page": 589,
      "ruku": 526,
      "hizbQuarter": 236,
      "sajda": false
    },
    {
      "number": 5898,
      "text": "Sesungguhnya dia menyangka bahwa dia sekali-kali tidak akan kembali (kepada Tuhannya).",
      "numberInSurah": 14,
      "juz": 30,
      "manzil": 7,
      "page": 589,
      "ruku": 526,
      "hizbQuarter": 236,
      "sajda": false
    },
    {
      "number": 5899,
      "text": "(Bukan demikian), yang benar, sesungguhnya Tuhannya selalu melihatnya.",
      "numberInSurah": 15,
      "juz": 30,
      "manzil": 7,
      "page": 589,
      "ruku": 526,
      "hizbQuarter": 236,
      "sajda": false
    },
    {
      "number": 5900,
      "text": "Maka sesungguhnya Aku bersumpah dengan cahaya merah di waktu senja,",
      "numberInSurah": 16,
      "juz": 30,
      "manzil": 7,
      "page": 589,
      "ruku": 526,
      "hizbQuarter": 236,
      "sajda": false
    },
    {
      "number": 5901,
      "text": "dan dengan malam dan apa yang diselubunginya,",
      "numberInSurah": 17,
      "juz": 30,
      "manzil": 7,
      "page": 589,
      "ruku": 526,
      "hizbQuarter": 236,
      "sajda": false
    },
    {
      "number": 5902,
      "text": "dan dengan bulan apabila jadi purnama,",
      "numberInSurah": 18,
      "juz": 30,
      "manzil": 7,
      "page": 589,
      "ruku": 526,
      "hizbQuarter": 236,
      "sajda": false
    },
    {
      "number": 5903,
      "text": "sesungguhnya kamu melalui tingkat demi tingkat (dalam kehidupan),",
      "numberInSurah": 19,
      "juz": 30,
      "manzil": 7,
      "page": 589,
      "ruku": 526,
      "hizbQuarter": 236,
      "sajda": false
    },
    {
      "number": 5904,
      "text": "Mengapa mereka tidak mau beriman?",
      "numberInSurah": 20,
      "juz": 30,
      "manzil": 7,
      "page": 589,
      "ruku": 526,
      "hizbQuarter": 236,
      "sajda": false
    },
    {
      "number": 5905,
      "text": "dan apabila Al Quran dibacakan kepada mereka, mereka tidak bersujud,",
      "numberInSurah": 21,
      "juz": 30,
      "manzil": 7,
      "page": 589,
      "ruku": 526,
      "hizbQuarter": 236,
      "sajda": {
        "id": 14,
        "recommended": true,
        "obligatory": false
      }
    },
    {
      "number": 5906,
      "text": "bahkan orang-orang kafir itu mendustakan(nya).",
      "numberInSurah": 22,
      "juz": 30,
      "manzil": 7,
      "page": 589,
      "ruku": 526,
      "hizbQuarter": 236,
      "sajda": false
    },
    {
      "number": 5907,
      "text": "Padahal Allah mengetahui apa yang mereka sembunyikan (dalam hati mereka).",
      "numberInSurah": 23,
      "juz": 30,
      "manzil": 7,
      "page": 589,
      "ruku": 526,
      "hizbQuarter": 236,
      "sajda": false
    },
    {
      "number": 5908,
      "text": "Maka beri kabar gembiralah mereka dengan azab yang pedih,",
      "numberInSurah": 24,
      "juz": 30,
      "manzil": 7,
      "page": 589,
      "ruku": 526,
      "hizbQuarter": 236,
      "sajda": false
    },
    {
      "number": 5909,
      "text": "tetapi orang-orang yang beriman dan beramal saleh, bagi mereka pahala yang tidak putus-putusnya.",
      "numberInSurah": 25,
      "juz": 30,
      "manzil": 7,
      "page": 589,
      "ruku": 526,
      "hizbQuarter": 236,
      "sajda": false
    }
  ],
