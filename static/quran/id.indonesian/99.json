{
  "number": 99,
  "name": "سُورَةُ الزَّلۡزَلَةِ",
  "englishName": "Az-Zalzala",
  "englishNameTranslation": "The Earthquake",
  "revelationType": "Medinan",
  "numberOfAyahs": 8,
  "ayahs": [
    {
      "number": 6139,
      "text": "Apabila bumi digoncangkan dengan goncangan (yang dahsyat),",
      "numberInSurah": 1,
      "juz": 30,
      "manzil": 7,
      "page": 599,
      "ruku": 541,
      "hizbQuarter": 239,
      "sajda": false
    },
    {
      "number": 6140,
      "text": "dan bumi telah mengeluarkan beban-beban berat (yang dikandung)nya,",
      "numberInSurah": 2,
      "juz": 30,
      "manzil": 7,
      "page": 599,
      "ruku": 541,
      "hizbQuarter": 239,
      "sajda": false
    },
    {
      "number": 6141,
      "text": "dan manusia bertanya: \"Mengapa bumi (menjadi begini)?\",",
      "numberInSurah": 3,
      "juz": 30,
      "manzil": 7,
      "page": 599,
      "ruku": 541,
      "hizbQuarter": 239,
      "sajda": false
    },
    {
      "number": 6142,
      "text": "pada hari itu bumi menceritakan beritanya,",
      "numberInSurah": 4,
      "juz": 30,
      "manzil": 7,
      "page": 599,
      "ruku": 541,
      "hizbQuarter": 239,
      "sajda": false
    },
    {
      "number": 6143,
      "text": "karena sesungguhnya Tuhanmu telah memerintahkan (yang sedemikian itu) kepadanya.",
      "numberInSurah": 5,
      "juz": 30,
      "manzil": 7,
      "page": 599,
      "ruku": 541,
      "hizbQuarter": 239,
      "sajda": false
    },
    {
      "number": 6144,
      "text": "Pada hari itu manusia ke luar dari kuburnya dalam keadaan bermacam-macam, supaya diperlihatkan kepada mereka (balasan) pekerjaan mereka,",
      "numberInSurah": 6,
      "juz": 30,
      "manzil": 7,
      "page": 599,
      "ruku": 541,
      "hizbQuarter": 239,
      "sajda": false
    },
    {
      "number": 6145,
      "text": "Barangsiapa yang mengerjakan kebaikan seberat dzarrahpun, niscaya dia akan melihat (balasan)nya.",
      "numberInSurah": 7,
      "juz": 30,
      "manzil": 7,
      "page": 599,
      "ruku": 541,
      "hizbQuarter": 239,
      "sajda": false
    },
    {
      "number": 6146,
      "text": "Dan barangsiapa yang mengerjakan kejahatan sebesar dzarrahpun, niscaya dia akan melihat (balasan)nya pula.",
      "numberInSurah": 8,
      "juz": 30,
      "manzil": 7,
      "page": 599,
      "ruku": 541,
      "hizbQuarter": 239,
      "sajda": false
    }
  ],
