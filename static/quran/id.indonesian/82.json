{
  "number": 82,
  "name": "سُورَةُ الانفِطَارِ",
  "englishName": "Al-Infitaar",
  "englishNameTranslation": "The Cleaving",
  "revelationType": "Meccan",
  "numberOfAyahs": 19,
  "ayahs": [
    {
      "number": 5830,
      "text": "Apabila langit terbelah,",
      "numberInSurah": 1,
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 524,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 5831,
      "text": "dan apabila bintang-bintang jatuh berserakan,",
      "numberInSurah": 2,
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 524,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 5832,
      "text": "dan apabila lautan menjadikan meluap,",
      "numberInSurah": 3,
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 524,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 5833,
      "text": "dan apabila kuburan-kuburan dibongkar,",
      "numberInSurah": 4,
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 524,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 5834,
      "text": "maka tiap-tiap jiwa akan mengetahui apa yang telah dikerjakan dan yang dilalaikannya.",
      "numberInSurah": 5,
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 524,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 5835,
      "text": "Hai manusia, apakah yang telah memperdayakan kamu (berbuat durhaka) terhadap Tuhanmu Yang Maha Pemurah.",
      "numberInSurah": 6,
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 524,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 5836,
      "text": "Yang telah menciptakan kamu lalu menyempurnakan kejadianmu dan menjadikan (susunan tubuh)mu seimbang,",
      "numberInSurah": 7,
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 524,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 5837,
      "text": "dalam bentuk apa saja yang Dia kehendaki, Dia menyusun tubuhmu.",
      "numberInSurah": 8,
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 524,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 5838,
      "text": "Bukan hanya durhaka saja, bahkan kamu mendustakan hari pembalasan.",
      "numberInSurah": 9,
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 524,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 5839,
      "text": "Padahal sesungguhnya bagi kamu ada (malaikat-malaikat) yang mengawasi (pekerjaanmu),",
      "numberInSurah": 10,
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 524,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 5840,
      "text": "yang mulia (di sisi Allah) dan mencatat (pekerjaan-pekerjaanmu itu),",
      "numberInSurah": 11,
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 524,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 5841,
      "text": "mereka mengetahui apa yang kamu kerjakan.",
      "numberInSurah": 12,
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 524,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 5842,
      "text": "Sesungguhnya orang-orang yang banyak berbakti benar-benar berada dalam surga yang penuh kenikmatan,",
      "numberInSurah": 13,
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 524,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 5843,
      "text": "dan sesungguhnya orang-orang yang durhaka benar-benar berada dalam neraka.",
      "numberInSurah": 14,
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 524,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 5844,
      "text": "Mereka masuk ke dalamnya pada hari pembalasan.",
      "numberInSurah": 15,
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 524,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 5845,
      "text": "Dan mereka sekali-kali tidak dapat keluar dari neraka itu.",
      "numberInSurah": 16,
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 524,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 5846,
      "text": "Tahukah kamu apakah hari pembalasan itu?",
      "numberInSurah": 17,
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 524,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 5847,
      "text": "Sekali lagi, tahukah kamu apakah hari pembalasan itu?",
      "numberInSurah": 18,
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 524,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 5848,
      "text": "(Yaitu) hari (ketika) seseorang tidak berdaya sedikitpun untuk menolong orang lain. Dan segala urusan pada hari itu dalam kekuasaan Allah.",
      "numberInSurah": 19,
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 524,
      "hizbQuarter": 235,
      "sajda": false
    }
  ],
