{
  "number": 78,
  "name": "سُورَةُ النَّبَإِ",
  "englishName": "An-Naba",
  "englishNameTranslation": "The Announcement",
  "revelationType": "Meccan",
  "numberOfAyahs": 40,
  "ayahs": [
    {
      "number": 5673,
      "text": "Tentang apakah mereka saling bertanya-tanya?",
      "numberInSurah": 1,
      "juz": 30,
      "manzil": 7,
      "page": 582,
      "ruku": 518,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5674,
      "text": "Tentang berita yang besar,",
      "numberInSurah": 2,
      "juz": 30,
      "manzil": 7,
      "page": 582,
      "ruku": 518,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5675,
      "text": "yang mereka perselisihkan tentang ini.",
      "numberInSurah": 3,
      "juz": 30,
      "manzil": 7,
      "page": 582,
      "ruku": 518,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5676,
      "text": "Sekali-kali tidak; kelak mereka akan mengetahui,",
      "numberInSurah": 4,
      "juz": 30,
      "manzil": 7,
      "page": 582,
      "ruku": 518,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5677,
      "text": "kemudian sekali-kali tidak; kelak mereka mengetahui.",
      "numberInSurah": 5,
      "juz": 30,
      "manzil": 7,
      "page": 582,
      "ruku": 518,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5678,
      "text": "Bukankah Kami telah menjadikan bumi itu sebagai hamparan?,",
      "numberInSurah": 6,
      "juz": 30,
      "manzil": 7,
      "page": 582,
      "ruku": 518,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5679,
      "text": "dan gunung-gunung sebagai pasak?,",
      "numberInSurah": 7,
      "juz": 30,
      "manzil": 7,
      "page": 582,
      "ruku": 518,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5680,
      "text": "dan Kami jadikan kamu berpasang-pasangan,",
      "numberInSurah": 8,
      "juz": 30,
      "manzil": 7,
      "page": 582,
      "ruku": 518,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5681,
      "text": "dan Kami jadikan tidurmu untuk istirahat,",
      "numberInSurah": 9,
      "juz": 30,
      "manzil": 7,
      "page": 582,
      "ruku": 518,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5682,
      "text": "dan Kami jadikan malam sebagai pakaian,",
      "numberInSurah": 10,
      "juz": 30,
      "manzil": 7,
      "page": 582,
      "ruku": 518,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5683,
      "text": "dan Kami jadikan siang untuk mencari penghidupan,",
      "numberInSurah": 11,
      "juz": 30,
      "manzil": 7,
      "page": 582,
      "ruku": 518,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5684,
      "text": "dan Kami bina di atas kamu tujuh buah (langit) yang kokoh,",
      "numberInSurah": 12,
      "juz": 30,
      "manzil": 7,
      "page": 582,
      "ruku": 518,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5685,
      "text": "dan Kami jadikan pelita yang amat terang (matahari),",
      "numberInSurah": 13,
      "juz": 30,
      "manzil": 7,
      "page": 582,
      "ruku": 518,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5686,
      "text": "dan Kami turunkan dari awan air yang banyak tercurah,",
      "numberInSurah": 14,
      "juz": 30,
      "manzil": 7,
      "page": 582,
      "ruku": 518,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5687,
      "text": "supaya Kami tumbuhkan dengan air itu biji-bijian dan tumbuh-tumbuhan,",
      "numberInSurah": 15,
      "juz": 30,
      "manzil": 7,
      "page": 582,
      "ruku": 518,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5688,
      "text": "dan kebun-kebun yang lebat?",
      "numberInSurah": 16,
      "juz": 30,
      "manzil": 7,
      "page": 582,
      "ruku": 518,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5689,
      "text": "Sesungguhnya Hari Keputusan adalah suatu waktu yang ditetapkan,",
      "numberInSurah": 17,
      "juz": 30,
      "manzil": 7,
      "page": 582,
      "ruku": 518,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5690,
      "text": "yaitu hari (yang pada waktu itu) ditiup sangkakala lalu kamu datang berkelompok-kelompok,",
      "numberInSurah": 18,
      "juz": 30,
      "manzil": 7,
      "page": 582,
      "ruku": 518,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5691,
      "text": "dan dibukalah langit, maka terdapatlah beberapa pintu,",
      "numberInSurah": 19,
      "juz": 30,
      "manzil": 7,
      "page": 582,
      "ruku": 518,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5692,
      "text": "dan dijalankanlah gunung-gunung maka menjadi fatamorganalah ia.",
      "numberInSurah": 20,
      "juz": 30,
      "manzil": 7,
      "page": 582,
      "ruku": 518,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5693,
      "text": "Sesungguhnya neraka Jahannam itu (padanya) ada tempat pengintai,",
      "numberInSurah": 21,
      "juz": 30,
      "manzil": 7,
      "page": 582,
      "ruku": 518,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5694,
      "text": "lagi menjadi tempat kembali bagi orang-orang yang melampaui batas,",
      "numberInSurah": 22,
      "juz": 30,
      "manzil": 7,
      "page": 582,
      "ruku": 518,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5695,
      "text": "mereka tinggal di dalamnya berabad-abad lamanya,",
      "numberInSurah": 23,
      "juz": 30,
      "manzil": 7,
      "page": 582,
      "ruku": 518,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5696,
      "text": "mereka tidak merasakan kesejukan di dalamnya dan tidak (pula mendapat) minuman,",
      "numberInSurah": 24,
      "juz": 30,
      "manzil": 7,
      "page": 582,
      "ruku": 518,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5697,
      "text": "selain air yang mendidih dan nanah,",
      "numberInSurah": 25,
      "juz": 30,
      "manzil": 7,
      "page": 582,
      "ruku": 518,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5698,
      "text": "sebagai pambalasan yang setimpal.",
      "numberInSurah": 26,
      "juz": 30,
      "manzil": 7,
      "page": 582,
      "ruku": 518,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5699,
      "text": "Sesungguhnya mereka tidak berharap (takut) kepada hisab,",
      "numberInSurah": 27,
      "juz": 30,
      "manzil": 7,
      "page": 582,
      "ruku": 518,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5700,
      "text": "dan mereka mendustakan ayat-ayat Kami dengan sesungguh-sungguhnya.",
      "numberInSurah": 28,
      "juz": 30,
      "manzil": 7,
      "page": 582,
      "ruku": 518,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5701,
      "text": "Dan segala sesuatu telah Kami catat dalam suatu kitab.",
      "numberInSurah": 29,
      "juz": 30,
      "manzil": 7,
      "page": 582,
      "ruku": 518,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5702,
      "text": "Karena itu rasakanlah. Dan Kami sekali-kali tidak akan menambah kepada kamu selain daripada azab.",
      "numberInSurah": 30,
      "juz": 30,
      "manzil": 7,
      "page": 582,
      "ruku": 518,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5703,
      "text": "Sesungguhnya orang-orang yang bertakwa mendapat kemenangan,",
      "numberInSurah": 31,
      "juz": 30,
      "manzil": 7,
      "page": 583,
      "ruku": 519,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5704,
      "text": "(yaitu) kebun-kebun dan buah anggur,",
      "numberInSurah": 32,
      "juz": 30,
      "manzil": 7,
      "page": 583,
      "ruku": 519,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5705,
      "text": "dan gadis-gadis remaja yang sebaya,",
      "numberInSurah": 33,
      "juz": 30,
      "manzil": 7,
      "page": 583,
      "ruku": 519,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5706,
      "text": "dan gelas-gelas yang penuh (berisi minuman).",
      "numberInSurah": 34,
      "juz": 30,
      "manzil": 7,
      "page": 583,
      "ruku": 519,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5707,
      "text": "Di dalamnya mereka tidak mendengar perkataan yang sia-sia dan tidak (pula) perkataan dusta.",
      "numberInSurah": 35,
      "juz": 30,
      "manzil": 7,
      "page": 583,
      "ruku": 519,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5708,
      "text": "Sebagai pembalasan dari Tuhanmu dan pemberian yang cukup banyak,",
      "numberInSurah": 36,
      "juz": 30,
      "manzil": 7,
      "page": 583,
      "ruku": 519,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5709,
      "text": "Tuhan Yang memelihara langit dan bumi dan apa yang ada di antara keduanya; Yang Maha Pemurah. Mereka tidak dapat berbicara dengan Dia.",
      "numberInSurah": 37,
      "juz": 30,
      "manzil": 7,
      "page": 583,
      "ruku": 519,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5710,
      "text": "Pada hari, ketika ruh dan para malaikat berdiri bershaf-shaf, mereka tidak berkata-kata, kecuali siapa yang telah diberi izin kepadanya oleh Tuhan Yang Maha Pemurah; dan ia mengucapkan kata yang benar.",
      "numberInSurah": 38,
      "juz": 30,
      "manzil": 7,
      "page": 583,
      "ruku": 519,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5711,
      "text": "Itulah hari yang pasti terjadi. Maka barangsiapa yang menghendaki, niscaya ia menempuh jalan kembali kepada Tuhannya.",
      "numberInSurah": 39,
      "juz": 30,
      "manzil": 7,
      "page": 583,
      "ruku": 519,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5712,
      "text": "Sesungguhnya Kami telah memperingatkan kepadamu (hai orang kafir) siksa yang dekat, pada hari manusia melihat apa yang telah diperbuat oleh kedua tangannya; dan orang kafir berkata: \"Alangkah baiknya sekiranya aku dahulu adalah tanah\".",
      "numberInSurah": 40,
      "juz": 30,
      "manzil": 7,
      "page": 583,
      "ruku": 519,
      "hizbQuarter": 233,
      "sajda": false
    }
  ],
