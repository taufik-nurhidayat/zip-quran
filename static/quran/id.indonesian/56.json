{
  "number": 56,
  "name": "سُورَةُ الوَاقِعَةِ",
  "englishName": "Al-Waaqia",
  "englishNameTranslation": "The Inevitable",
  "revelationType": "Meccan",
  "numberOfAyahs": 96,
  "ayahs": [
    {
      "number": 4980,
      "text": "Apabila terjadi hari kiamat,",
      "numberInSurah": 1,
      "juz": 27,
      "manzil": 7,
      "page": 534,
      "ruku": 469,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 4981,
      "text": "tidak seorangpun dapat berdusta tentang kejadiannya.",
      "numberInSurah": 2,
      "juz": 27,
      "manzil": 7,
      "page": 534,
      "ruku": 469,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 4982,
      "text": "(Kejadian itu) merendahkan (satu golongan) dan meninggikan (golongan yang lain),",
      "numberInSurah": 3,
      "juz": 27,
      "manzil": 7,
      "page": 534,
      "ruku": 469,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 4983,
      "text": "apabila bumi digoncangkan sedahsyat-dahsyatnya,",
      "numberInSurah": 4,
      "juz": 27,
      "manzil": 7,
      "page": 534,
      "ruku": 469,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 4984,
      "text": "dan gunung-gunung dihancur luluhkan seluluh-luluhnya,",
      "numberInSurah": 5,
      "juz": 27,
      "manzil": 7,
      "page": 534,
      "ruku": 469,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 4985,
      "text": "maka jadilah ia debu yang beterbangan,",
      "numberInSurah": 6,
      "juz": 27,
      "manzil": 7,
      "page": 534,
      "ruku": 469,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 4986,
      "text": "dan kamu menjadi tiga golongan.",
      "numberInSurah": 7,
      "juz": 27,
      "manzil": 7,
      "page": 534,
      "ruku": 469,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 4987,
      "text": "Yaitu golongan kanan. Alangkah mulianya golongan kanan itu.",
      "numberInSurah": 8,
      "juz": 27,
      "manzil": 7,
      "page": 534,
      "ruku": 469,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 4988,
      "text": "Dan golongan kiri. Alangkah sengsaranya golongan kiri itu.",
      "numberInSurah": 9,
      "juz": 27,
      "manzil": 7,
      "page": 534,
      "ruku": 469,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 4989,
      "text": "Dan orang-orang yang beriman paling dahulu,",
      "numberInSurah": 10,
      "juz": 27,
      "manzil": 7,
      "page": 534,
      "ruku": 469,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 4990,
      "text": "Mereka itulah yang didekatkan kepada Allah.",
      "numberInSurah": 11,
      "juz": 27,
      "manzil": 7,
      "page": 534,
      "ruku": 469,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 4991,
      "text": "Berada dalam jannah kenikmatan.",
      "numberInSurah": 12,
      "juz": 27,
      "manzil": 7,
      "page": 534,
      "ruku": 469,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 4992,
      "text": "Segolongan besar dari orang-orang yang terdahulu,",
      "numberInSurah": 13,
      "juz": 27,
      "manzil": 7,
      "page": 534,
      "ruku": 469,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 4993,
      "text": "dan segolongan kecil dari orang-orang yang kemudian",
      "numberInSurah": 14,
      "juz": 27,
      "manzil": 7,
      "page": 534,
      "ruku": 469,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 4994,
      "text": "Mereka berada di atas dipan yang bertahta emas dan permata,",
      "numberInSurah": 15,
      "juz": 27,
      "manzil": 7,
      "page": 534,
      "ruku": 469,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 4995,
      "text": "seraya bertelekan di atasnya berhadap-hadapan.",
      "numberInSurah": 16,
      "juz": 27,
      "manzil": 7,
      "page": 534,
      "ruku": 469,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 4996,
      "text": "Mereka dikelilingi oleh anak-anak muda yang tetap muda,",
      "numberInSurah": 17,
      "juz": 27,
      "manzil": 7,
      "page": 535,
      "ruku": 469,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 4997,
      "text": "dengan membawa gelas, cerek dan minuman yang diambil dari air yang mengalir,",
      "numberInSurah": 18,
      "juz": 27,
      "manzil": 7,
      "page": 535,
      "ruku": 469,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 4998,
      "text": "mereka tidak pening karenanya dan tidak pula mabuk,",
      "numberInSurah": 19,
      "juz": 27,
      "manzil": 7,
      "page": 535,
      "ruku": 469,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 4999,
      "text": "dan buah-buahan dari apa yang mereka pilih,",
      "numberInSurah": 20,
      "juz": 27,
      "manzil": 7,
      "page": 535,
      "ruku": 469,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 5000,
      "text": "dan daging burung dari apa yang mereka inginkan.",
      "numberInSurah": 21,
      "juz": 27,
      "manzil": 7,
      "page": 535,
      "ruku": 469,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 5001,
      "text": "Dan ada bidadari-bidadari bermata jeli,",
      "numberInSurah": 22,
      "juz": 27,
      "manzil": 7,
      "page": 535,
      "ruku": 469,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 5002,
      "text": "laksana mutiara yang tersimpan baik.",
      "numberInSurah": 23,
      "juz": 27,
      "manzil": 7,
      "page": 535,
      "ruku": 469,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 5003,
      "text": "Sebagai balasan bagi apa yang telah mereka kerjakan.",
      "numberInSurah": 24,
      "juz": 27,
      "manzil": 7,
      "page": 535,
      "ruku": 469,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 5004,
      "text": "Mereka tidak mendengar di dalamnya perkataan yang sia-sia dan tidak pula perkataan yang menimbulkan dosa,",
      "numberInSurah": 25,
      "juz": 27,
      "manzil": 7,
      "page": 535,
      "ruku": 469,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 5005,
      "text": "akan tetapi mereka mendengar ucapan salam.",
      "numberInSurah": 26,
      "juz": 27,
      "manzil": 7,
      "page": 535,
      "ruku": 469,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 5006,
      "text": "Dan golongan kanan, alangkah bahagianya golongan kanan itu.",
      "numberInSurah": 27,
      "juz": 27,
      "manzil": 7,
      "page": 535,
      "ruku": 469,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 5007,
      "text": "Berada di antara pohon bidara yang tak berduri,",
      "numberInSurah": 28,
      "juz": 27,
      "manzil": 7,
      "page": 535,
      "ruku": 469,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 5008,
      "text": "dan pohon pisang yang bersusun-susun (buahnya),",
      "numberInSurah": 29,
      "juz": 27,
      "manzil": 7,
      "page": 535,
      "ruku": 469,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 5009,
      "text": "dan naungan yang terbentang luas,",
      "numberInSurah": 30,
      "juz": 27,
      "manzil": 7,
      "page": 535,
      "ruku": 469,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 5010,
      "text": "dan air yang tercurah,",
      "numberInSurah": 31,
      "juz": 27,
      "manzil": 7,
      "page": 535,
      "ruku": 469,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 5011,
      "text": "dan buah-buahan yang banyak,",
      "numberInSurah": 32,
      "juz": 27,
      "manzil": 7,
      "page": 535,
      "ruku": 469,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 5012,
      "text": "yang tidak berhenti (berbuah) dan tidak terlarang mengambilnya.",
      "numberInSurah": 33,
      "juz": 27,
      "manzil": 7,
      "page": 535,
      "ruku": 469,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 5013,
      "text": "dan kasur-kasur yang tebal lagi empuk.",
      "numberInSurah": 34,
      "juz": 27,
      "manzil": 7,
      "page": 535,
      "ruku": 469,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 5014,
      "text": "Sesungguhnya Kami menciptakan mereka (bidadari-bidadari) dengan langsung",
      "numberInSurah": 35,
      "juz": 27,
      "manzil": 7,
      "page": 535,
      "ruku": 469,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 5015,
      "text": "dan Kami jadikan mereka gadis-gadis perawan.",
      "numberInSurah": 36,
      "juz": 27,
      "manzil": 7,
      "page": 535,
      "ruku": 469,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 5016,
      "text": "penuh cinta lagi sebaya umurnya.",
      "numberInSurah": 37,
      "juz": 27,
      "manzil": 7,
      "page": 535,
      "ruku": 469,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 5017,
      "text": "(Kami ciptakan mereka) untuk golongan kanan,",
      "numberInSurah": 38,
      "juz": 27,
      "manzil": 7,
      "page": 535,
      "ruku": 469,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 5018,
      "text": "(yaitu) segolongan besar dari orang-orang yang terdahulu.",
      "numberInSurah": 39,
      "juz": 27,
      "manzil": 7,
      "page": 535,
      "ruku": 470,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 5019,
      "text": "dan segolongan besar pula dari orang-orang yang kemudian.",
      "numberInSurah": 40,
      "juz": 27,
      "manzil": 7,
      "page": 535,
      "ruku": 470,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 5020,
      "text": "Dan golongan kiri, siapakah golongan kiri itu?",
      "numberInSurah": 41,
      "juz": 27,
      "manzil": 7,
      "page": 535,
      "ruku": 470,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 5021,
      "text": "Dalam (siksaan) angin yang amat panas, dan air panas yang mendidih,",
      "numberInSurah": 42,
      "juz": 27,
      "manzil": 7,
      "page": 535,
      "ruku": 470,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 5022,
      "text": "dan dalam naungan asap yang hitam.",
      "numberInSurah": 43,
      "juz": 27,
      "manzil": 7,
      "page": 535,
      "ruku": 470,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 5023,
      "text": "Tidak sejuk dan tidak menyenangkan.",
      "numberInSurah": 44,
      "juz": 27,
      "manzil": 7,
      "page": 535,
      "ruku": 470,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 5024,
      "text": "Sesungguhnya mereka sebelum itu hidup bermewahan.",
      "numberInSurah": 45,
      "juz": 27,
      "manzil": 7,
      "page": 535,
      "ruku": 470,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 5025,
      "text": "Dan mereka terus-menerus mengerjakan dosa besar.",
      "numberInSurah": 46,
      "juz": 27,
      "manzil": 7,
      "page": 535,
      "ruku": 470,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 5026,
      "text": "Dan mereka selalu mengatakan: \"Apakah bila kami mati dan menjadi tanah dan tulang belulang, apakah sesungguhnya kami akan benar-benar dibangkitkan kembali?",
      "numberInSurah": 47,
      "juz": 27,
      "manzil": 7,
      "page": 535,
      "ruku": 470,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 5027,
      "text": "apakah bapak-bapak kami yang terdahulu (juga)?\"",
      "numberInSurah": 48,
      "juz": 27,
      "manzil": 7,
      "page": 535,
      "ruku": 470,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 5028,
      "text": "Katakanlah: \"Sesungguhnya orang-orang yang terdahulu dan orang-orang yang terkemudian,",
      "numberInSurah": 49,
      "juz": 27,
      "manzil": 7,
      "page": 535,
      "ruku": 470,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 5029,
      "text": "benar-benar akan dikumpulkan di waktu tertentu pada hari yang dikenal.",
      "numberInSurah": 50,
      "juz": 27,
      "manzil": 7,
      "page": 535,
      "ruku": 470,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 5030,
      "text": "Kemudian sesungguhnya kamu hai orang-orang yang sesat lagi mendustakan,",
      "numberInSurah": 51,
      "juz": 27,
      "manzil": 7,
      "page": 536,
      "ruku": 470,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 5031,
      "text": "benar-benar akan memakan pohon zaqqum,",
      "numberInSurah": 52,
      "juz": 27,
      "manzil": 7,
      "page": 536,
      "ruku": 470,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 5032,
      "text": "dan akan memenuhi perutmu dengannya.",
      "numberInSurah": 53,
      "juz": 27,
      "manzil": 7,
      "page": 536,
      "ruku": 470,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 5033,
      "text": "Sesudah itu kamu akan meminum air yang sangat panas.",
      "numberInSurah": 54,
      "juz": 27,
      "manzil": 7,
      "page": 536,
      "ruku": 470,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 5034,
      "text": "Maka kamu minum seperti unta yang sangat haus minum.",
      "numberInSurah": 55,
      "juz": 27,
      "manzil": 7,
      "page": 536,
      "ruku": 470,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 5035,
      "text": "Itulah hidangan untuk mereka pada hari Pembalasan\".",
      "numberInSurah": 56,
      "juz": 27,
      "manzil": 7,
      "page": 536,
      "ruku": 470,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 5036,
      "text": "Kami telah menciptakan kamu, maka mengapa kamu tidak membenarkan?",
      "numberInSurah": 57,
      "juz": 27,
      "manzil": 7,
      "page": 536,
      "ruku": 470,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 5037,
      "text": "Maka terangkanlah kepadaku tentang nutfah yang kamu pancarkan.",
      "numberInSurah": 58,
      "juz": 27,
      "manzil": 7,
      "page": 536,
      "ruku": 470,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 5038,
      "text": "Kamukah yang menciptakannya, atau Kamikah yang menciptakannya?",
      "numberInSurah": 59,
      "juz": 27,
      "manzil": 7,
      "page": 536,
      "ruku": 470,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 5039,
      "text": "Kami telah menentukan kematian di antara kamu dan Kami sekali-sekali tidak akan dapat dikalahkan,",
      "numberInSurah": 60,
      "juz": 27,
      "manzil": 7,
      "page": 536,
      "ruku": 470,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 5040,
      "text": "untuk menggantikan kamu dengan orang-orang yang seperti kamu (dalam dunia) dan menciptakan kamu kelak (di akhirat) dalam keadaan yang tidak kamu ketahui.",
      "numberInSurah": 61,
      "juz": 27,
      "manzil": 7,
      "page": 536,
      "ruku": 470,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 5041,
      "text": "Dan Sesungguhnya kamu telah mengetahui penciptaan yang pertama, maka mengapakah kamu tidak mengambil pelajaran (untuk penciptaan yang kedua)?",
      "numberInSurah": 62,
      "juz": 27,
      "manzil": 7,
      "page": 536,
      "ruku": 470,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 5042,
      "text": "Maka terangkanlah kepadaku tentang yang kamu tanam.",
      "numberInSurah": 63,
      "juz": 27,
      "manzil": 7,
      "page": 536,
      "ruku": 470,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 5043,
      "text": "Kamukah yang menumbuhkannya atau Kamikah yang menumbuhkannya?",
      "numberInSurah": 64,
      "juz": 27,
      "manzil": 7,
      "page": 536,
      "ruku": 470,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 5044,
      "text": "Kalau Kami kehendaki, benar-benar Kami jadikan dia hancur dan kering, maka jadilah kamu heran dan tercengang.",
      "numberInSurah": 65,
      "juz": 27,
      "manzil": 7,
      "page": 536,
      "ruku": 470,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 5045,
      "text": "(Sambil berkata): \"Sesungguhnya kami benar-benar menderita kerugian\",",
      "numberInSurah": 66,
      "juz": 27,
      "manzil": 7,
      "page": 536,
      "ruku": 470,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 5046,
      "text": "bahkan kami menjadi orang-orang yang tidak mendapat hasil apa-apa.",
      "numberInSurah": 67,
      "juz": 27,
      "manzil": 7,
      "page": 536,
      "ruku": 470,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 5047,
      "text": "Maka terangkanlah kepadaku tentang air yang kamu minum.",
      "numberInSurah": 68,
      "juz": 27,
      "manzil": 7,
      "page": 536,
      "ruku": 470,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 5048,
      "text": "Kamukah yang menurunkannya atau Kamikah yang menurunkannya?",
      "numberInSurah": 69,
      "juz": 27,
      "manzil": 7,
      "page": 536,
      "ruku": 470,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 5049,
      "text": "Kalau Kami kehendaki, niscaya Kami jadikan dia asin, maka mengapakah kamu tidak bersyukur?",
      "numberInSurah": 70,
      "juz": 27,
      "manzil": 7,
      "page": 536,
      "ruku": 470,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 5050,
      "text": "Maka terangkanlah kepadaku tentang api yang kamu nyalakan (dengan menggosok-gosokkan kayu).",
      "numberInSurah": 71,
      "juz": 27,
      "manzil": 7,
      "page": 536,
      "ruku": 470,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 5051,
      "text": "Kamukah yang menjadikan kayu itu atau Kamikah yang menjadikannya?",
      "numberInSurah": 72,
      "juz": 27,
      "manzil": 7,
      "page": 536,
      "ruku": 470,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 5052,
      "text": "Kami jadikan api itu untuk peringatan dan bahan yang berguna bagi musafir di padang pasir.",
      "numberInSurah": 73,
      "juz": 27,
      "manzil": 7,
      "page": 536,
      "ruku": 470,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 5053,
      "text": "Maka bertasbihlah dengan (menyebut) nama Rabbmu Yang Maha Besar.",
      "numberInSurah": 74,
      "juz": 27,
      "manzil": 7,
      "page": 536,
      "ruku": 470,
      "hizbQuarter": 214,
      "sajda": false
    },
    {
      "number": 5054,
      "text": "Maka Aku bersumpah dengan masa turunnya bagian-bagian Al-Quran.",
      "numberInSurah": 75,
      "juz": 27,
      "manzil": 7,
      "page": 536,
      "ruku": 471,
      "hizbQuarter": 215,
      "sajda": false
    },
    {
      "number": 5055,
      "text": "Sesungguhnya sumpah itu adalah sumpah yang besar kalau kamu mengetahui.",
      "numberInSurah": 76,
      "juz": 27,
      "manzil": 7,
      "page": 536,
      "ruku": 471,
      "hizbQuarter": 215,
      "sajda": false
    },
    {
      "number": 5056,
      "text": "Sesungguhnya Al-Quran ini adalah bacaan yang sangat mulia,",
      "numberInSurah": 77,
      "juz": 27,
      "manzil": 7,
      "page": 537,
      "ruku": 471,
      "hizbQuarter": 215,
      "sajda": false
    },
    {
      "number": 5057,
      "text": "pada kitab yang terpelihara (Lauhul Mahfuzh),",
      "numberInSurah": 78,
      "juz": 27,
      "manzil": 7,
      "page": 537,
      "ruku": 471,
      "hizbQuarter": 215,
      "sajda": false
    },
    {
      "number": 5058,
      "text": "tidak menyentuhnya kecuali orang-orang yang disucikan.",
      "numberInSurah": 79,
      "juz": 27,
      "manzil": 7,
      "page": 537,
      "ruku": 471,
      "hizbQuarter": 215,
      "sajda": false
    },
    {
      "number": 5059,
      "text": "Diturunkan dari Rabbil 'alamiin.",
      "numberInSurah": 80,
      "juz": 27,
      "manzil": 7,
      "page": 537,
      "ruku": 471,
      "hizbQuarter": 215,
      "sajda": false
    },
    {
      "number": 5060,
      "text": "Maka apakah kamu menganggap remeh saja Al-Quran ini?",
      "numberInSurah": 81,
      "juz": 27,
      "manzil": 7,
      "page": 537,
      "ruku": 471,
      "hizbQuarter": 215,
      "sajda": false
    },
    {
      "number": 5061,
      "text": "kamu mengganti rezeki (yang Allah berikan) dengan mendustakan Allah.",
      "numberInSurah": 82,
      "juz": 27,
      "manzil": 7,
      "page": 537,
      "ruku": 471,
      "hizbQuarter": 215,
      "sajda": false
    },
    {
      "number": 5062,
      "text": "Maka mengapa ketika nyawa sampai di kerongkongan,",
      "numberInSurah": 83,
      "juz": 27,
      "manzil": 7,
      "page": 537,
      "ruku": 471,
      "hizbQuarter": 215,
      "sajda": false
    },
    {
      "number": 5063,
      "text": "padahal kamu ketika itu melihat,",
      "numberInSurah": 84,
      "juz": 27,
      "manzil": 7,
      "page": 537,
      "ruku": 471,
      "hizbQuarter": 215,
      "sajda": false
    },
    {
      "number": 5064,
      "text": "dan Kami lebih dekat kepadanya dari pada kamu. Tetapi kamu tidak melihat,",
      "numberInSurah": 85,
      "juz": 27,
      "manzil": 7,
      "page": 537,
      "ruku": 471,
      "hizbQuarter": 215,
      "sajda": false
    },
    {
      "number": 5065,
      "text": "maka mengapa jika kamu tidak dikuasai (oleh Allah)?",
      "numberInSurah": 86,
      "juz": 27,
      "manzil": 7,
      "page": 537,
      "ruku": 471,
      "hizbQuarter": 215,
      "sajda": false
    },
    {
      "number": 5066,
      "text": "Kamu tidak mengembalikan nyawa itu (kepada tempatnya) jika kamu adalah orang-orang yang benar?",
      "numberInSurah": 87,
      "juz": 27,
      "manzil": 7,
      "page": 537,
      "ruku": 471,
      "hizbQuarter": 215,
      "sajda": false
    },
    {
      "number": 5067,
      "text": "adapun jika dia (orang yang mati) termasuk orang-orang yang didekatkan (kepada Allah),",
      "numberInSurah": 88,
      "juz": 27,
      "manzil": 7,
      "page": 537,
      "ruku": 471,
      "hizbQuarter": 215,
      "sajda": false
    },
    {
      "number": 5068,
      "text": "maka dia memperoleh ketenteraman dan rezeki serta jannah kenikmatan.",
      "numberInSurah": 89,
      "juz": 27,
      "manzil": 7,
      "page": 537,
      "ruku": 471,
      "hizbQuarter": 215,
      "sajda": false
    },
    {
      "number": 5069,
      "text": "Dan adapun jika dia termasuk golongan kanan,",
      "numberInSurah": 90,
      "juz": 27,
      "manzil": 7,
      "page": 537,
      "ruku": 471,
      "hizbQuarter": 215,
      "sajda": false
    },
    {
      "number": 5070,
      "text": "maka keselamatanlah bagimu karena kamu dari golongan kanan.",
      "numberInSurah": 91,
      "juz": 27,
      "manzil": 7,
      "page": 537,
      "ruku": 471,
      "hizbQuarter": 215,
      "sajda": false
    },
    {
      "number": 5071,
      "text": "Dan adapun jika dia termasuk golongan yang mendustakan lagi sesat,",
      "numberInSurah": 92,
      "juz": 27,
      "manzil": 7,
      "page": 537,
      "ruku": 471,
      "hizbQuarter": 215,
      "sajda": false
    },
    {
      "number": 5072,
      "text": "maka dia mendapat hidangan air yang mendidih,",
      "numberInSurah": 93,
      "juz": 27,
      "manzil": 7,
      "page": 537,
      "ruku": 471,
      "hizbQuarter": 215,
      "sajda": false
    },
    {
      "number": 5073,
      "text": "dan dibakar di dalam jahannam.",
      "numberInSurah": 94,
      "juz": 27,
      "manzil": 7,
      "page": 537,
      "ruku": 471,
      "hizbQuarter": 215,
      "sajda": false
    },
    {
      "number": 5074,
      "text": "Sesungguhnya (yang disebutkan ini) adalah suatu keyakinan yang benar.",
      "numberInSurah": 95,
      "juz": 27,
      "manzil": 7,
      "page": 537,
      "ruku": 471,
      "hizbQuarter": 215,
      "sajda": false
    },
    {
      "number": 5075,
      "text": "Maka bertasbihlah dengan (menyebut) nama Rabbmu yang Maha Besar.",
      "numberInSurah": 96,
      "juz": 27,
      "manzil": 7,
      "page": 537,
      "ruku": 471,
      "hizbQuarter": 215,
      "sajda": false
    }
