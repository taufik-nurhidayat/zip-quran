{
  "number": 88,
  "name": "سُورَةُ الغَاشِيَةِ",
  "englishName": "Al-Ghaashiya",
  "englishNameTranslation": "The Overwhelming",
  "revelationType": "Meccan",
  "numberOfAyahs": 26,
  "ayahs": [
    {
      "number": 5968,
      "text": "Sudah datangkah kepadamu berita (tentang) hari pembalasan?",
      "numberInSurah": 1,
      "juz": 30,
      "manzil": 7,
      "page": 592,
      "ruku": 530,
      "hizbQuarter": 237,
      "sajda": false
    },
    {
      "number": 5969,
      "text": "Banyak muka pada hari itu tunduk terhina,",
      "numberInSurah": 2,
      "juz": 30,
      "manzil": 7,
      "page": 592,
      "ruku": 530,
      "hizbQuarter": 237,
      "sajda": false
    },
    {
      "number": 5970,
      "text": "bekerja keras lagi kepayahan,",
      "numberInSurah": 3,
      "juz": 30,
      "manzil": 7,
      "page": 592,
      "ruku": 530,
      "hizbQuarter": 237,
      "sajda": false
    },
    {
      "number": 5971,
      "text": "memasuki api yang sangat panas (neraka),",
      "numberInSurah": 4,
      "juz": 30,
      "manzil": 7,
      "page": 592,
      "ruku": 530,
      "hizbQuarter": 237,
      "sajda": false
    },
    {
      "number": 5972,
      "text": "diberi minum (dengan air) dari sumber yang sangat panas.",
      "numberInSurah": 5,
      "juz": 30,
      "manzil": 7,
      "page": 592,
      "ruku": 530,
      "hizbQuarter": 237,
      "sajda": false
    },
    {
      "number": 5973,
      "text": "Mereka tiada memperoleh makanan selain dari pohon yang berduri,",
      "numberInSurah": 6,
      "juz": 30,
      "manzil": 7,
      "page": 592,
      "ruku": 530,
      "hizbQuarter": 237,
      "sajda": false
    },
    {
      "number": 5974,
      "text": "yang tidak menggemukkan dan tidak pula menghilangkan lapar.",
      "numberInSurah": 7,
      "juz": 30,
      "manzil": 7,
      "page": 592,
      "ruku": 530,
      "hizbQuarter": 237,
      "sajda": false
    },
    {
      "number": 5975,
      "text": "Banyak muka pada hari itu berseri-seri,",
      "numberInSurah": 8,
      "juz": 30,
      "manzil": 7,
      "page": 592,
      "ruku": 530,
      "hizbQuarter": 237,
      "sajda": false
    },
    {
      "number": 5976,
      "text": "merasa senang karena usahanya,",
      "numberInSurah": 9,
      "juz": 30,
      "manzil": 7,
      "page": 592,
      "ruku": 530,
      "hizbQuarter": 237,
      "sajda": false
    },
    {
      "number": 5977,
      "text": "dalam surga yang tinggi,",
      "numberInSurah": 10,
      "juz": 30,
      "manzil": 7,
      "page": 592,
      "ruku": 530,
      "hizbQuarter": 237,
      "sajda": false
    },
    {
      "number": 5978,
      "text": "tidak kamu dengar di dalamnya perkataan yang tidak berguna.",
      "numberInSurah": 11,
      "juz": 30,
      "manzil": 7,
      "page": 592,
      "ruku": 530,
      "hizbQuarter": 237,
      "sajda": false
    },
    {
      "number": 5979,
      "text": "Di dalamnya ada mata air yang mengalir.",
      "numberInSurah": 12,
      "juz": 30,
      "manzil": 7,
      "page": 592,
      "ruku": 530,
      "hizbQuarter": 237,
      "sajda": false
    },
    {
      "number": 5980,
      "text": "Di dalamnya ada takhta-takhta yang ditinggikan,",
      "numberInSurah": 13,
      "juz": 30,
      "manzil": 7,
      "page": 592,
      "ruku": 530,
      "hizbQuarter": 237,
      "sajda": false
    },
    {
      "number": 5981,
      "text": "dan gelas-gelas yang terletak (di dekatnya),",
      "numberInSurah": 14,
      "juz": 30,
      "manzil": 7,
      "page": 592,
      "ruku": 530,
      "hizbQuarter": 237,
      "sajda": false
    },
    {
      "number": 5982,
      "text": "dan bantal-bantal sandaran yang tersusun,",
      "numberInSurah": 15,
      "juz": 30,
      "manzil": 7,
      "page": 592,
      "ruku": 530,
      "hizbQuarter": 237,
      "sajda": false
    },
    {
      "number": 5983,
      "text": "dan permadani-permadani yang terhampar.",
      "numberInSurah": 16,
      "juz": 30,
      "manzil": 7,
      "page": 592,
      "ruku": 530,
      "hizbQuarter": 237,
      "sajda": false
    },
    {
      "number": 5984,
      "text": "Maka apakah mereka tidak memperhatikan unta bagaimana dia diciptakan,",
      "numberInSurah": 17,
      "juz": 30,
      "manzil": 7,
      "page": 592,
      "ruku": 530,
      "hizbQuarter": 237,
      "sajda": false
    },
    {
      "number": 5985,
      "text": "Dan langit, bagaimana ia ditinggikan?",
      "numberInSurah": 18,
      "juz": 30,
      "manzil": 7,
      "page": 592,
      "ruku": 530,
      "hizbQuarter": 237,
      "sajda": false
    },
    {
      "number": 5986,
      "text": "Dan gunung-gunung bagaimana ia ditegakkan?",
      "numberInSurah": 19,
      "juz": 30,
      "manzil": 7,
      "page": 592,
      "ruku": 530,
      "hizbQuarter": 237,
      "sajda": false
    },
    {
      "number": 5987,
      "text": "Dan bumi bagaimana ia dihamparkan?",
      "numberInSurah": 20,
      "juz": 30,
      "manzil": 7,
      "page": 592,
      "ruku": 530,
      "hizbQuarter": 237,
      "sajda": false
    },
    {
      "number": 5988,
      "text": "Maka berilah peringatan, karena sesungguhnya kamu hanyalah orang yang memberi peringatan.",
      "numberInSurah": 21,
      "juz": 30,
      "manzil": 7,
      "page": 592,
      "ruku": 530,
      "hizbQuarter": 237,
      "sajda": false
    },
    {
      "number": 5989,
      "text": "Kamu bukanlah orang yang berkuasa atas mereka,",
      "numberInSurah": 22,
      "juz": 30,
      "manzil": 7,
      "page": 592,
      "ruku": 530,
      "hizbQuarter": 237,
      "sajda": false
    },
    {
      "number": 5990,
      "text": "tetapi orang yang berpaling dan kafir,",
      "numberInSurah": 23,
      "juz": 30,
      "manzil": 7,
      "page": 592,
      "ruku": 530,
      "hizbQuarter": 237,
      "sajda": false
    },
    {
      "number": 5991,
      "text": "maka Allah akan mengazabnya dengan azab yang besar.",
      "numberInSurah": 24,
      "juz": 30,
      "manzil": 7,
      "page": 592,
      "ruku": 530,
      "hizbQuarter": 237,
      "sajda": false
    },
    {
      "number": 5992,
      "text": "Sesungguhnya kepada Kami-lah kembali mereka,",
      "numberInSurah": 25,
      "juz": 30,
      "manzil": 7,
      "page": 592,
      "ruku": 530,
      "hizbQuarter": 237,
      "sajda": false
    },
    {
      "number": 5993,
      "text": "kemudian sesungguhnya kewajiban Kami-lah menghisab mereka.",
      "numberInSurah": 26,
      "juz": 30,
      "manzil": 7,
      "page": 592,
      "ruku": 530,
      "hizbQuarter": 237,
      "sajda": false
    }
  ],
