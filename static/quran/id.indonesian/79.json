{
  "number": 79,
  "name": "سُورَةُ النَّازِعَاتِ",
  "englishName": "An-Naazi'aat",
  "englishNameTranslation": "Those who drag forth",
  "revelationType": "Meccan",
  "numberOfAyahs": 46,
  "ayahs": [
    {
      "number": 5713,
      "text": "Demi (malaikat-malaikat) yang mencabut (nyawa) dengan keras,",
      "numberInSurah": 1,
      "juz": 30,
      "manzil": 7,
      "page": 583,
      "ruku": 520,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5714,
      "text": "dan (malaikat-malaikat) yang mencabut (nyawa) dengan lemah-lembut,",
      "numberInSurah": 2,
      "juz": 30,
      "manzil": 7,
      "page": 583,
      "ruku": 520,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5715,
      "text": "dan (malaikat-malaikat) yang turun dari langit dengan cepat,",
      "numberInSurah": 3,
      "juz": 30,
      "manzil": 7,
      "page": 583,
      "ruku": 520,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5716,
      "text": "dan (malaikat-malaikat) yang mendahului dengan kencang,",
      "numberInSurah": 4,
      "juz": 30,
      "manzil": 7,
      "page": 583,
      "ruku": 520,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5717,
      "text": "dan (malaikat-malaikat) yang mengatur urusan (dunia).",
      "numberInSurah": 5,
      "juz": 30,
      "manzil": 7,
      "page": 583,
      "ruku": 520,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5718,
      "text": "(Sesungguhnya kamu akan dibangkitkan) pada hari ketika tiupan pertama menggoncang alam,",
      "numberInSurah": 6,
      "juz": 30,
      "manzil": 7,
      "page": 583,
      "ruku": 520,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5719,
      "text": "tiupan pertama itu diiringi oleh tiupan kedua.",
      "numberInSurah": 7,
      "juz": 30,
      "manzil": 7,
      "page": 583,
      "ruku": 520,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5720,
      "text": "Hati manusia pada waktu itu sangat takut,",
      "numberInSurah": 8,
      "juz": 30,
      "manzil": 7,
      "page": 583,
      "ruku": 520,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5721,
      "text": "Pandangannya tunduk.",
      "numberInSurah": 9,
      "juz": 30,
      "manzil": 7,
      "page": 583,
      "ruku": 520,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5722,
      "text": "(Orang-orang kafir) berkata: \"Apakah sesungguhnya kami benar-benar dikembalikan kepada kehidupan semula?",
      "numberInSurah": 10,
      "juz": 30,
      "manzil": 7,
      "page": 583,
      "ruku": 520,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5723,
      "text": "Apakah (akan dibangkitkan juga) apabila kami telah menjadi tulang belulang yang hancur lumat?\"",
      "numberInSurah": 11,
      "juz": 30,
      "manzil": 7,
      "page": 583,
      "ruku": 520,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5724,
      "text": "Mereka berkata: \"Kalau demikian, itu adalah suatu pengembalian yang merugikan\".",
      "numberInSurah": 12,
      "juz": 30,
      "manzil": 7,
      "page": 583,
      "ruku": 520,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5725,
      "text": "Sesungguhnya pengembalian itu hanyalah satu kali tiupan saja,",
      "numberInSurah": 13,
      "juz": 30,
      "manzil": 7,
      "page": 583,
      "ruku": 520,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5726,
      "text": "maka dengan serta merta mereka hidup kembali di permukaan bumi.",
      "numberInSurah": 14,
      "juz": 30,
      "manzil": 7,
      "page": 583,
      "ruku": 520,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5727,
      "text": "Sudah sampaikah kepadamu (ya Muhammad) kisah Musa.",
      "numberInSurah": 15,
      "juz": 30,
      "manzil": 7,
      "page": 583,
      "ruku": 520,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5728,
      "text": "Tatkala Tuhannya memanggilnya di lembah suci ialah Lembah Thuwa;",
      "numberInSurah": 16,
      "juz": 30,
      "manzil": 7,
      "page": 584,
      "ruku": 520,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5729,
      "text": "\"Pergilah kamu kepada Fir'aun, sesungguhnya dia telah melampaui batas,",
      "numberInSurah": 17,
      "juz": 30,
      "manzil": 7,
      "page": 584,
      "ruku": 520,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5730,
      "text": "dan katakanlah (kepada Fir'aun): \"Adakah keinginan bagimu untuk membersihkan diri (dari kesesatan)\".",
      "numberInSurah": 18,
      "juz": 30,
      "manzil": 7,
      "page": 584,
      "ruku": 520,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5731,
      "text": "Dan kamu akan kupimpin ke jalan Tuhanmu agar supaya kamu takut kepada-Nya?\"",
      "numberInSurah": 19,
      "juz": 30,
      "manzil": 7,
      "page": 584,
      "ruku": 520,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5732,
      "text": "Lalu Musa memperlihatkan kepadanya mukjizat yang besar.",
      "numberInSurah": 20,
      "juz": 30,
      "manzil": 7,
      "page": 584,
      "ruku": 520,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5733,
      "text": "Tetapi Fir'aun mendustakan dan mendurhakai.",
      "numberInSurah": 21,
      "juz": 30,
      "manzil": 7,
      "page": 584,
      "ruku": 520,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5734,
      "text": "Kemudian dia berpaling seraya berusaha menantang (Musa).",
      "numberInSurah": 22,
      "juz": 30,
      "manzil": 7,
      "page": 584,
      "ruku": 520,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5735,
      "text": "Maka dia mengumpulkan (pembesar-pembesarnya) lalu berseru memanggil kaumnya.",
      "numberInSurah": 23,
      "juz": 30,
      "manzil": 7,
      "page": 584,
      "ruku": 520,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5736,
      "text": "(Seraya) berkata: \"Akulah tuhanmu yang paling tinggi\".",
      "numberInSurah": 24,
      "juz": 30,
      "manzil": 7,
      "page": 584,
      "ruku": 520,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5737,
      "text": "Maka Allah mengazabnya dengan azab di akhirat dan azab di dunia.",
      "numberInSurah": 25,
      "juz": 30,
      "manzil": 7,
      "page": 584,
      "ruku": 520,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5738,
      "text": "Sesungguhnya pada yang demikian itu terdapat pelajaran bagi orang yang takut (kepada Tuhannya).",
      "numberInSurah": 26,
      "juz": 30,
      "manzil": 7,
      "page": 584,
      "ruku": 520,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5739,
      "text": "Apakah kamu lebih sulit penciptaanya ataukah langit? Allah telah membinanya,",
      "numberInSurah": 27,
      "juz": 30,
      "manzil": 7,
      "page": 584,
      "ruku": 521,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5740,
      "text": "Dia meninggikan bangunannya lalu menyempurnakannya,",
      "numberInSurah": 28,
      "juz": 30,
      "manzil": 7,
      "page": 584,
      "ruku": 521,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5741,
      "text": "dan Dia menjadikan malamnya gelap gulita, dan menjadikan siangnya terang benderang.",
      "numberInSurah": 29,
      "juz": 30,
      "manzil": 7,
      "page": 584,
      "ruku": 521,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5742,
      "text": "Dan bumi sesudah itu dihamparkan-Nya.",
      "numberInSurah": 30,
      "juz": 30,
      "manzil": 7,
      "page": 584,
      "ruku": 521,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5743,
      "text": "Ia memancarkan daripadanya mata airnya, dan (menumbuhkan) tumbuh-tumbuhannya.",
      "numberInSurah": 31,
      "juz": 30,
      "manzil": 7,
      "page": 584,
      "ruku": 521,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5744,
      "text": "Dan gunung-gunung dipancangkan-Nya dengan teguh,",
      "numberInSurah": 32,
      "juz": 30,
      "manzil": 7,
      "page": 584,
      "ruku": 521,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5745,
      "text": "(semua itu) untuk kesenanganmu dan untuk binatang-binatang ternakmu.",
      "numberInSurah": 33,
      "juz": 30,
      "manzil": 7,
      "page": 584,
      "ruku": 521,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5746,
      "text": "Maka apabila malapetaka yang sangat besar (hari kiamat) telah datang.",
      "numberInSurah": 34,
      "juz": 30,
      "manzil": 7,
      "page": 584,
      "ruku": 521,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5747,
      "text": "Pada hari (ketika) manusia teringat akan apa yang telah dikerjakannya,",
      "numberInSurah": 35,
      "juz": 30,
      "manzil": 7,
      "page": 584,
      "ruku": 521,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5748,
      "text": "dan diperlihatkan neraka dengan jelas kepada setiap orang yang melihat.",
      "numberInSurah": 36,
      "juz": 30,
      "manzil": 7,
      "page": 584,
      "ruku": 521,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5749,
      "text": "Adapun orang yang melampaui batas,",
      "numberInSurah": 37,
      "juz": 30,
      "manzil": 7,
      "page": 584,
      "ruku": 521,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5750,
      "text": "dan lebih mengutamakan kehidupan dunia,",
      "numberInSurah": 38,
      "juz": 30,
      "manzil": 7,
      "page": 584,
      "ruku": 521,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5751,
      "text": "maka sesungguhnya nerakalah tempat tinggal(nya).",
      "numberInSurah": 39,
      "juz": 30,
      "manzil": 7,
      "page": 584,
      "ruku": 521,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5752,
      "text": "Dan adapun orang-orang yang takut kepada kebesaran Tuhannya dan menahan diri dari keinginan hawa nafsunya,",
      "numberInSurah": 40,
      "juz": 30,
      "manzil": 7,
      "page": 584,
      "ruku": 521,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5753,
      "text": "maka sesungguhnya surgalah tempat tinggal(nya).",
      "numberInSurah": 41,
      "juz": 30,
      "manzil": 7,
      "page": 584,
      "ruku": 521,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5754,
      "text": "(Orang-orang kafir) bertanya kepadamu (Muhammad) tentang hari kebangkitan, kapankah terjadinya?",
      "numberInSurah": 42,
      "juz": 30,
      "manzil": 7,
      "page": 584,
      "ruku": 521,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5755,
      "text": "Siapakah kamu (maka) dapat menyebutkan (waktunya)?",
      "numberInSurah": 43,
      "juz": 30,
      "manzil": 7,
      "page": 584,
      "ruku": 521,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5756,
      "text": "Kepada Tuhanmulah dikembalikan kesudahannya (ketentuan waktunya).",
      "numberInSurah": 44,
      "juz": 30,
      "manzil": 7,
      "page": 584,
      "ruku": 521,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5757,
      "text": "Kamu hanyalah pemberi peringatan bagi siapa yang takut kepadanya (hari berbangkit)",
      "numberInSurah": 45,
      "juz": 30,
      "manzil": 7,
      "page": 584,
      "ruku": 521,
      "hizbQuarter": 233,
      "sajda": false
    },
    {
      "number": 5758,
      "text": "Pada hari mereka melihat hari berbangkit itu, mereka merasa seakan-akan tidak tinggal (di dunia) melainkan (sebentar saja) di waktu sore atau pagi hari.",
      "numberInSurah": 46,
      "juz": 30,
      "manzil": 7,
      "page": 584,
      "ruku": 521,
      "hizbQuarter": 233,
      "sajda": false
    }
  ],
