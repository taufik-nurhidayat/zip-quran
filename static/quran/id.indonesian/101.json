{
  "number": 101,
  "name": "سُورَةُ القَارِعَةِ",
  "englishName": "Al-Qaari'a",
  "englishNameTranslation": "The Calamity",
  "revelationType": "Meccan",
  "numberOfAyahs": 11,
  "ayahs": [
    {
      "number": 6158,
      "text": "Hari Kiamat,",
      "numberInSurah": 1,
      "juz": 30,
      "manzil": 7,
      "page": 600,
      "ruku": 543,
      "hizbQuarter": 240,
      "sajda": false
    },
    {
      "number": 6159,
      "text": "apakah hari Kiamat itu?",
      "numberInSurah": 2,
      "juz": 30,
      "manzil": 7,
      "page": 600,
      "ruku": 543,
      "hizbQuarter": 240,
      "sajda": false
    },
    {
      "number": 6160,
      "text": "Tahukah kamu apakah hari Kiamat itu?",
      "numberInSurah": 3,
      "juz": 30,
      "manzil": 7,
      "page": 600,
      "ruku": 543,
      "hizbQuarter": 240,
      "sajda": false
    },
    {
      "number": 6161,
      "text": "Pada hari itu manusia adalah seperti anai-anai yang bertebaran,",
      "numberInSurah": 4,
      "juz": 30,
      "manzil": 7,
      "page": 600,
      "ruku": 543,
      "hizbQuarter": 240,
      "sajda": false
    },
    {
      "number": 6162,
      "text": "dan gunung-gunung adalah seperti bulu yang dihambur-hamburkan.",
      "numberInSurah": 5,
      "juz": 30,
      "manzil": 7,
      "page": 600,
      "ruku": 543,
      "hizbQuarter": 240,
      "sajda": false
    },
    {
      "number": 6163,
      "text": "Dan adapun orang-orang yang berat timbangan (kebaikan)nya,",
      "numberInSurah": 6,
      "juz": 30,
      "manzil": 7,
      "page": 600,
      "ruku": 543,
      "hizbQuarter": 240,
      "sajda": false
    },
    {
      "number": 6164,
      "text": "maka dia berada dalam kehidupan yang memuaskan.",
      "numberInSurah": 7,
      "juz": 30,
      "manzil": 7,
      "page": 600,
      "ruku": 543,
      "hizbQuarter": 240,
      "sajda": false
    },
    {
      "number": 6165,
      "text": "Dan adapun orang-orang yang ringan timbangan (kebaikan)nya,",
      "numberInSurah": 8,
      "juz": 30,
      "manzil": 7,
      "page": 600,
      "ruku": 543,
      "hizbQuarter": 240,
      "sajda": false
    },
    {
      "number": 6166,
      "text": "maka tempat kembalinya adalah neraka Hawiyah.",
      "numberInSurah": 9,
      "juz": 30,
      "manzil": 7,
      "page": 600,
      "ruku": 543,
      "hizbQuarter": 240,
      "sajda": false
    },
    {
      "number": 6167,
      "text": "Tahukah kamu apakah neraka Hawiyah itu?",
      "numberInSurah": 10,
      "juz": 30,
      "manzil": 7,
      "page": 600,
      "ruku": 543,
      "hizbQuarter": 240,
      "sajda": false
    },
    {
      "number": 6168,
      "text": "(Yaitu) api yang sangat panas.",
      "numberInSurah": 11,
      "juz": 30,
      "manzil": 7,
      "page": 600,
      "ruku": 543,
      "hizbQuarter": 240,
      "sajda": false
    }
