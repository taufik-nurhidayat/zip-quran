{
  "number": 92,
  "name": "سُورَةُ اللَّيۡلِ",
  "englishName": "Al-Lail",
  "englishNameTranslation": "The Night",
  "revelationType": "Meccan",
  "numberOfAyahs": 21,
  "ayahs": [
    {
      "number": 6059,
      "text": "Demi malam apabila menutupi (cahaya siang),",
      "numberInSurah": 1,
      "juz": 30,
      "manzil": 7,
      "page": 595,
      "ruku": 534,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 6060,
      "text": "dan siang apabila terang benderang,",
      "numberInSurah": 2,
      "juz": 30,
      "manzil": 7,
      "page": 595,
      "ruku": 534,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 6061,
      "text": "dan penciptaan laki-laki dan perempuan,",
      "numberInSurah": 3,
      "juz": 30,
      "manzil": 7,
      "page": 595,
      "ruku": 534,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 6062,
      "text": "sesungguhnya usaha kamu memang berbeda-beda.",
      "numberInSurah": 4,
      "juz": 30,
      "manzil": 7,
      "page": 595,
      "ruku": 534,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 6063,
      "text": "Adapun orang yang memberikan (hartanya di jalan Allah) dan bertakwa,",
      "numberInSurah": 5,
      "juz": 30,
      "manzil": 7,
      "page": 595,
      "ruku": 534,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 6064,
      "text": "dan membenarkan adanya pahala yang terbaik (surga),",
      "numberInSurah": 6,
      "juz": 30,
      "manzil": 7,
      "page": 595,
      "ruku": 534,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 6065,
      "text": "maka Kami kelak akan menyiapkan baginya jalan yang mudah.",
      "numberInSurah": 7,
      "juz": 30,
      "manzil": 7,
      "page": 595,
      "ruku": 534,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 6066,
      "text": "Dan adapun orang-orang yang bakhil dan merasa dirinya cukup,",
      "numberInSurah": 8,
      "juz": 30,
      "manzil": 7,
      "page": 595,
      "ruku": 534,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 6067,
      "text": "serta mendustakan pahala terbaik,",
      "numberInSurah": 9,
      "juz": 30,
      "manzil": 7,
      "page": 595,
      "ruku": 534,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 6068,
      "text": "maka kelak Kami akan menyiapkan baginya (jalan) yang sukar.",
      "numberInSurah": 10,
      "juz": 30,
      "manzil": 7,
      "page": 595,
      "ruku": 534,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 6069,
      "text": "Dan hartanya tidak bermanfaat baginya apabila ia telah binasa.",
      "numberInSurah": 11,
      "juz": 30,
      "manzil": 7,
      "page": 595,
      "ruku": 534,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 6070,
      "text": "Sesungguhnya kewajiban Kamilah memberi petunjuk,",
      "numberInSurah": 12,
      "juz": 30,
      "manzil": 7,
      "page": 595,
      "ruku": 534,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 6071,
      "text": "dan sesungguhnya kepunyaan Kamilah akhirat dan dunia.",
      "numberInSurah": 13,
      "juz": 30,
      "manzil": 7,
      "page": 595,
      "ruku": 534,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 6072,
      "text": "Maka, kami memperingatkan kamu dengan neraka yang menyala-nyala.",
      "numberInSurah": 14,
      "juz": 30,
      "manzil": 7,
      "page": 595,
      "ruku": 534,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 6073,
      "text": "Tidak ada yang masuk ke dalamnya kecuali orang yang paling celaka,",
      "numberInSurah": 15,
      "juz": 30,
      "manzil": 7,
      "page": 596,
      "ruku": 534,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 6074,
      "text": "yang mendustakan (kebenaran) dan berpaling (dari iman).",
      "numberInSurah": 16,
      "juz": 30,
      "manzil": 7,
      "page": 596,
      "ruku": 534,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 6075,
      "text": "Dan kelak akan dijauhkan orang yang paling takwa dari neraka itu,",
      "numberInSurah": 17,
      "juz": 30,
      "manzil": 7,
      "page": 596,
      "ruku": 534,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 6076,
      "text": "yang menafkahkan hartanya (di jalan Allah) untuk membersihkannya,",
      "numberInSurah": 18,
      "juz": 30,
      "manzil": 7,
      "page": 596,
      "ruku": 534,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 6077,
      "text": "padahal tidak ada seseorangpun memberikan suatu nikmat kepadanya yang harus dibalasnya,",
      "numberInSurah": 19,
      "juz": 30,
      "manzil": 7,
      "page": 596,
      "ruku": 534,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 6078,
      "text": "tetapi (dia memberikan itu semata-mata) karena mencari keridhaan Tuhannya yang Maha Tinggi.",
      "numberInSurah": 20,
      "juz": 30,
      "manzil": 7,
      "page": 596,
      "ruku": 534,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 6079,
      "text": "Dan kelak dia benar-benar mendapat kepuasan.",
      "numberInSurah": 21,
      "juz": 30,
      "manzil": 7,
      "page": 596,
      "ruku": 534,
      "hizbQuarter": 238,
      "sajda": false
    }
  ],
