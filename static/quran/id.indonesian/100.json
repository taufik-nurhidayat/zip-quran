{
  "number": 100,
  "name": "سُورَةُ العَادِيَاتِ",
  "englishName": "Al-Aadiyaat",
  "englishNameTranslation": "The Chargers",
  "revelationType": "Meccan",
  "numberOfAyahs": 11,
  "ayahs": [
    {
      "number": 6147,
      "text": "Demi kuda perang yang berlari kencang dengan terengah-engah,",
      "numberInSurah": 1,
      "juz": 30,
      "manzil": 7,
      "page": 599,
      "ruku": 542,
      "hizbQuarter": 239,
      "sajda": false
    },
    {
      "number": 6148,
      "text": "dan kuda yang mencetuskan api dengan pukulan (kuku kakinya),",
      "numberInSurah": 2,
      "juz": 30,
      "manzil": 7,
      "page": 599,
      "ruku": 542,
      "hizbQuarter": 239,
      "sajda": false
    },
    {
      "number": 6149,
      "text": "dan kuda yang menyerang dengan tiba-tiba di waktu pagi,",
      "numberInSurah": 3,
      "juz": 30,
      "manzil": 7,
      "page": 599,
      "ruku": 542,
      "hizbQuarter": 239,
      "sajda": false
    },
    {
      "number": 6150,
      "text": "maka ia menerbangkan debu,",
      "numberInSurah": 4,
      "juz": 30,
      "manzil": 7,
      "page": 599,
      "ruku": 542,
      "hizbQuarter": 239,
      "sajda": false
    },
    {
      "number": 6151,
      "text": "dan menyerbu ke tengah-tengah kumpulan musuh,",
      "numberInSurah": 5,
      "juz": 30,
      "manzil": 7,
      "page": 599,
      "ruku": 542,
      "hizbQuarter": 239,
      "sajda": false
    },
    {
      "number": 6152,
      "text": "sesungguhnya manusia itu sangat ingkar, tidak berterima kasih kepada Tuhannya,",
      "numberInSurah": 6,
      "juz": 30,
      "manzil": 7,
      "page": 599,
      "ruku": 542,
      "hizbQuarter": 239,
      "sajda": false
    },
    {
      "number": 6153,
      "text": "dan sesungguhnya manusia itu menyaksikan (sendiri) keingkarannya,",
      "numberInSurah": 7,
      "juz": 30,
      "manzil": 7,
      "page": 599,
      "ruku": 542,
      "hizbQuarter": 239,
      "sajda": false
    },
    {
      "number": 6154,
      "text": "dan sesungguhnya dia sangat bakhil karena cintanya kepada harta.",
      "numberInSurah": 8,
      "juz": 30,
      "manzil": 7,
      "page": 599,
      "ruku": 542,
      "hizbQuarter": 239,
      "sajda": false
    },
    {
      "number": 6155,
      "text": "Maka apakah dia tidak mengetahui apabila dibangkitkan apa yang ada di dalam kubur,",
      "numberInSurah": 9,
      "juz": 30,
      "manzil": 7,
      "page": 599,
      "ruku": 542,
      "hizbQuarter": 240,
      "sajda": false
    },
    {
      "number": 6156,
      "text": "dan dilahirkan apa yang ada di dalam dada,",
      "numberInSurah": 10,
      "juz": 30,
      "manzil": 7,
      "page": 600,
      "ruku": 542,
      "hizbQuarter": 240,
      "sajda": false
    },
    {
      "number": 6157,
      "text": "sesungguhnya Tuhan mereka pada hari itu Maha Mengetahui keadaan mereka.",
      "numberInSurah": 11,
      "juz": 30,
      "manzil": 7,
      "page": 600,
      "ruku": 542,
      "hizbQuarter": 240,
      "sajda": false
    }
  ],
