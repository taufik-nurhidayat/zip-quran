{
  "number": 91,
  "name": "سُورَةُ الشَّمۡسِ",
  "englishName": "Ash-Shams",
  "englishNameTranslation": "The Sun",
  "revelationType": "Meccan",
  "numberOfAyahs": 15,
  "ayahs": [
    {
      "number": 6044,
      "text": "Demi matahari dan cahayanya di pagi hari,",
      "numberInSurah": 1,
      "juz": 30,
      "manzil": 7,
      "page": 595,
      "ruku": 533,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 6045,
      "text": "dan bulan apabila mengiringinya,",
      "numberInSurah": 2,
      "juz": 30,
      "manzil": 7,
      "page": 595,
      "ruku": 533,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 6046,
      "text": "dan siang apabila menampakkannya,",
      "numberInSurah": 3,
      "juz": 30,
      "manzil": 7,
      "page": 595,
      "ruku": 533,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 6047,
      "text": "dan malam apabila menutupinya,",
      "numberInSurah": 4,
      "juz": 30,
      "manzil": 7,
      "page": 595,
      "ruku": 533,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 6048,
      "text": "dan langit serta pembinaannya,",
      "numberInSurah": 5,
      "juz": 30,
      "manzil": 7,
      "page": 595,
      "ruku": 533,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 6049,
      "text": "dan bumi serta penghamparannya,",
      "numberInSurah": 6,
      "juz": 30,
      "manzil": 7,
      "page": 595,
      "ruku": 533,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 6050,
      "text": "dan jiwa serta penyempurnaannya (ciptaannya),",
      "numberInSurah": 7,
      "juz": 30,
      "manzil": 7,
      "page": 595,
      "ruku": 533,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 6051,
      "text": "maka Allah mengilhamkan kepada jiwa itu (jalan) kefasikan dan ketakwaannya.",
      "numberInSurah": 8,
      "juz": 30,
      "manzil": 7,
      "page": 595,
      "ruku": 533,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 6052,
      "text": "sesungguhnya beruntunglah orang yang mensucikan jiwa itu,",
      "numberInSurah": 9,
      "juz": 30,
      "manzil": 7,
      "page": 595,
      "ruku": 533,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 6053,
      "text": "dan sesungguhnya merugilah orang yang mengotorinya.",
      "numberInSurah": 10,
      "juz": 30,
      "manzil": 7,
      "page": 595,
      "ruku": 533,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 6054,
      "text": "(Kaum) Tsamud telah mendustakan (rasulnya) karena mereka melampaui batas,",
      "numberInSurah": 11,
      "juz": 30,
      "manzil": 7,
      "page": 595,
      "ruku": 533,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 6055,
      "text": "ketika bangkit orang yang paling celaka di antara mereka,",
      "numberInSurah": 12,
      "juz": 30,
      "manzil": 7,
      "page": 595,
      "ruku": 533,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 6056,
      "text": "lalu Rasul Allah (Saleh) berkata kepada mereka: (\"Biarkanlah) unta betina Allah dan minumannya\".",
      "numberInSurah": 13,
      "juz": 30,
      "manzil": 7,
      "page": 595,
      "ruku": 533,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 6057,
      "text": "Lalu mereka mendustakannya dan menyembelih unta itu, maka Tuhan mereka membinasakan mereka disebabkan dosa mereka, lalu Allah menyama-ratakan mereka (dengan tanah),",
      "numberInSurah": 14,
      "juz": 30,
      "manzil": 7,
      "page": 595,
      "ruku": 533,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 6058,
      "text": "dan Allah tidak takut terhadap akibat tindakan-Nya itu.",
      "numberInSurah": 15,
      "juz": 30,
      "manzil": 7,
      "page": 595,
      "ruku": 533,
      "hizbQuarter": 238,
      "sajda": false
    }
  ],
