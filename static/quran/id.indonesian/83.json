{
  "number": 83,
  "name": "سُورَةُ المُطَفِّفِينَ",
  "englishName": "Al-Mutaffifin",
  "englishNameTranslation": "Defrauding",
  "revelationType": "Meccan",
  "numberOfAyahs": 36,
  "ayahs": [
    {
      "number": 5849,
      "text": "Kecelakaan besarlah bagi orang-orang yang curang",
      "numberInSurah": 1,
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 5850,
      "text": "(yaitu) orang-orang yang apabila menerima takaran dari orang lain mereka minta dipenuhi,",
      "numberInSurah": 2,
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 5851,
      "text": "dan apabila mereka menakar atau menimbang untuk orang lain, mereka mengurangi.",
      "numberInSurah": 3,
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 5852,
      "text": "Tidaklah orang-orang itu menyangka, bahwa sesungguhnya mereka akan dibangkitkan,",
      "numberInSurah": 4,
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 5853,
      "text": "pada suatu hari yang besar,",
      "numberInSurah": 5,
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 5854,
      "text": "(yaitu) hari (ketika) manusia berdiri menghadap Tuhan semesta alam?",
      "numberInSurah": 6,
      "juz": 30,
      "manzil": 7,
      "page": 587,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 5855,
      "text": "Sekali-kali jangan curang, karena sesungguhnya kitab orang yang durhaka tersimpan dalam sijjin.",
      "numberInSurah": 7,
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 5856,
      "text": "Tahukah kamu apakah sijjin itu?",
      "numberInSurah": 8,
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 5857,
      "text": "(Ialah) kitab yang bertulis.",
      "numberInSurah": 9,
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 5858,
      "text": "Kecelakaan yang besarlah pada hari itu bagi orang-orang yang mendustakan,",
      "numberInSurah": 10,
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 5859,
      "text": "(yaitu) orang-orang yang mendustakan hari pembalasan.",
      "numberInSurah": 11,
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 5860,
      "text": "Dan tidak ada yang mendustakan hari pembalasan itu melainkan setiap orang yang melampaui batas lagi berdosa,",
      "numberInSurah": 12,
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 5861,
      "text": "yang apabila dibacakan kepadanya ayat-ayat Kami, ia berkata: \"Itu adalah dongengan orang-orang yang dahulu\"",
      "numberInSurah": 13,
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 5862,
      "text": "Sekali-kali tidak (demikian), sebenarnya apa yang selalu mereka usahakan itu menutupi hati mereka.",
      "numberInSurah": 14,
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 5863,
      "text": "Sekali-kali tidak, sesungguhnya mereka pada hari itu benar-benar tertutup dari (rahmat) Tuhan mereka.",
      "numberInSurah": 15,
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 5864,
      "text": "Kemudian, sesungguhnya mereka benar-benar masuk neraka.",
      "numberInSurah": 16,
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 5865,
      "text": "Kemudian, dikatakan (kepada mereka): \"Inilah azab yang dahulu selalu kamu dustakan\".",
      "numberInSurah": 17,
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 5866,
      "text": "Sekali-kali tidak, sesungguhnya kitab orang-orang yang berbakti itu (tersimpan) dalam 'Illiyyin.",
      "numberInSurah": 18,
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 5867,
      "text": "Tahukah kamu apakah 'Illiyyin itu?",
      "numberInSurah": 19,
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 5868,
      "text": "(Yaitu) kitab yang bertulis,",
      "numberInSurah": 20,
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 5869,
      "text": "yang disaksikan oleh malaikat-malaikat yang didekatkan (kepada Allah).",
      "numberInSurah": 21,
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 5870,
      "text": "Sesungguhnya orang yang berbakti itu benar-benar berada dalam kenikmatan yang besar (surga),",
      "numberInSurah": 22,
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 5871,
      "text": "mereka (duduk) di atas dipan-dipan sambil memandang.",
      "numberInSurah": 23,
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 5872,
      "text": "Kamu dapat mengetahui dari wajah mereka kesenangan mereka yang penuh kenikmatan.",
      "numberInSurah": 24,
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 5873,
      "text": "Mereka diberi minum dari khamar murni yang dilak (tempatnya),",
      "numberInSurah": 25,
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 5874,
      "text": "laknya adalah kesturi; dan untuk yang demikian itu hendaknya orang berlomba-lomba.",
      "numberInSurah": 26,
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 5875,
      "text": "Dan campuran khamar murni itu adalah dari tasnim,",
      "numberInSurah": 27,
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 5876,
      "text": "(yaitu) mata air yang minum daripadanya orang-orang yang didekatkan kepada Allah.",
      "numberInSurah": 28,
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 5877,
      "text": "Sesungguhnya orang-orang yang berdosa, adalah mereka yang menertawakan orang-orang yang beriman.",
      "numberInSurah": 29,
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 5878,
      "text": "Dan apabila orang-orang yang beriman lalu di hadapan mereka, mereka saling mengedip-ngedipkan matanya.",
      "numberInSurah": 30,
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 5879,
      "text": "Dan apabila orang-orang yang berdosa itu kembali kepada kaumnya, mereka kembali dengan gembira.",
      "numberInSurah": 31,
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 5880,
      "text": "Dan apabila mereka melihat orang-orang mukmin, mereka mengatakan: \"Sesungguhnya mereka itu benar-benar orang-orang yang sesat\",",
      "numberInSurah": 32,
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 5881,
      "text": "padahal orang-orang yang berdosa itu tidak dikirim untuk penjaga bagi orang-orang mukmin.",
      "numberInSurah": 33,
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 5882,
      "text": "Maka pada hari ini, orang-orang yang beriman menertawakan orang-orang kafir,",
      "numberInSurah": 34,
      "juz": 30,
      "manzil": 7,
      "page": 588,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 5883,
      "text": "mereka (duduk) di atas dipan-dipan sambil memandang.",
      "numberInSurah": 35,
      "juz": 30,
      "manzil": 7,
      "page": 589,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    },
    {
      "number": 5884,
      "text": "Sesungguhnya orang-orang kafir telah diberi ganjaran terhadap apa yang dahulu mereka kerjakan.",
      "numberInSurah": 36,
      "juz": 30,
      "manzil": 7,
      "page": 589,
      "ruku": 525,
      "hizbQuarter": 235,
      "sajda": false
    }
  ],
