{
  "number": 90,
  "name": "سُورَةُ البَلَدِ",
  "englishName": "Al-Balad",
  "englishNameTranslation": "The City",
  "revelationType": "Meccan",
  "numberOfAyahs": 20,
  "ayahs": [
    {
      "number": 6024,
      "text": "Aku benar-benar bersumpah dengan kota ini (Mekah),",
      "numberInSurah": 1,
      "juz": 30,
      "manzil": 7,
      "page": 594,
      "ruku": 532,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 6025,
      "text": "dan kamu (Muhammad) bertempat di kota Mekah ini,",
      "numberInSurah": 2,
      "juz": 30,
      "manzil": 7,
      "page": 594,
      "ruku": 532,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 6026,
      "text": "dan demi bapak dan anaknya.",
      "numberInSurah": 3,
      "juz": 30,
      "manzil": 7,
      "page": 594,
      "ruku": 532,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 6027,
      "text": "Sesungguhnya Kami telah menciptakan manusia berada dalam susah payah.",
      "numberInSurah": 4,
      "juz": 30,
      "manzil": 7,
      "page": 594,
      "ruku": 532,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 6028,
      "text": "Apakah manusia itu menyangka bahwa sekali-kali tiada seorangpun yang berkuasa atasnya?",
      "numberInSurah": 5,
      "juz": 30,
      "manzil": 7,
      "page": 594,
      "ruku": 532,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 6029,
      "text": "Dan mengatakan: \"Aku telah menghabiskan harta yang banyak\".",
      "numberInSurah": 6,
      "juz": 30,
      "manzil": 7,
      "page": 594,
      "ruku": 532,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 6030,
      "text": "Apakah dia menyangka bahwa tiada seorangpun yang melihatnya?",
      "numberInSurah": 7,
      "juz": 30,
      "manzil": 7,
      "page": 594,
      "ruku": 532,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 6031,
      "text": "Bukankah Kami telah memberikan kepadanya dua buah mata,",
      "numberInSurah": 8,
      "juz": 30,
      "manzil": 7,
      "page": 594,
      "ruku": 532,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 6032,
      "text": "lidah dan dua buah bibir.",
      "numberInSurah": 9,
      "juz": 30,
      "manzil": 7,
      "page": 594,
      "ruku": 532,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 6033,
      "text": "Dan Kami telah menunjukkan kepadanya dua jalan,",
      "numberInSurah": 10,
      "juz": 30,
      "manzil": 7,
      "page": 594,
      "ruku": 532,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 6034,
      "text": "Tetapi dia tiada menempuh jalan yang mendaki lagi sukar.",
      "numberInSurah": 11,
      "juz": 30,
      "manzil": 7,
      "page": 594,
      "ruku": 532,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 6035,
      "text": "Tahukah kamu apakah jalan yang mendaki lagi sukar itu?",
      "numberInSurah": 12,
      "juz": 30,
      "manzil": 7,
      "page": 594,
      "ruku": 532,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 6036,
      "text": "(yaitu) melepaskan budak dari perbudakan,",
      "numberInSurah": 13,
      "juz": 30,
      "manzil": 7,
      "page": 594,
      "ruku": 532,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 6037,
      "text": "atau memberi makan pada hari kelaparan,",
      "numberInSurah": 14,
      "juz": 30,
      "manzil": 7,
      "page": 594,
      "ruku": 532,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 6038,
      "text": "(kepada) anak yatim yang ada hubungan kerabat,",
      "numberInSurah": 15,
      "juz": 30,
      "manzil": 7,
      "page": 594,
      "ruku": 532,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 6039,
      "text": "atau kepada orang miskin yang sangat fakir.",
      "numberInSurah": 16,
      "juz": 30,
      "manzil": 7,
      "page": 594,
      "ruku": 532,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 6040,
      "text": "Dan dia (tidak pula) termasuk orang-orang yang beriman dan saling berpesan untuk bersabar dan saling berpesan untuk berkasih sayang.",
      "numberInSurah": 17,
      "juz": 30,
      "manzil": 7,
      "page": 594,
      "ruku": 532,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 6041,
      "text": "Mereka (orang-orang yang beriman dan saling berpesan itu) adalah golongan kanan.",
      "numberInSurah": 18,
      "juz": 30,
      "manzil": 7,
      "page": 594,
      "ruku": 532,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 6042,
      "text": "Dan orang-orang yang kafir kepada ayat-ayat Kami, mereka itu adalah golongan kiri.",
      "numberInSurah": 19,
      "juz": 30,
      "manzil": 7,
      "page": 594,
      "ruku": 532,
      "hizbQuarter": 238,
      "sajda": false
    },
    {
      "number": 6043,
      "text": "Mereka berada dalam neraka yang ditutup rapat.",
      "numberInSurah": 20,
      "juz": 30,
      "manzil": 7,
      "page": 594,
      "ruku": 532,
      "hizbQuarter": 238,
      "sajda": false
    }
  ],
