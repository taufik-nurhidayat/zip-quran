{
  "number": 53,
  "name": "سُورَةُ النَّجۡمِ",
  "englishName": "An-Najm",
  "englishNameTranslation": "The Star",
  "revelationType": "Meccan",
  "numberOfAyahs": 62,
  "ayahs": [
    {
      "number": 4785,
      "text": "Demi bintang ketika terbenam.",
      "numberInSurah": 1,
      "juz": 27,
      "manzil": 7,
      "page": 526,
      "ruku": 460,
      "hizbQuarter": 210,
      "sajda": false
    },
    {
      "number": 4786,
      "text": "kawanmu (Muhammad) tidak sesat dan tidak pula keliru.",
      "numberInSurah": 2,
      "juz": 27,
      "manzil": 7,
      "page": 526,
      "ruku": 460,
      "hizbQuarter": 210,
      "sajda": false
    },
    {
      "number": 4787,
      "text": "dan tiadalah yang diucapkannya itu (Al-Quran) menurut kemauan hawa nafsunya.",
      "numberInSurah": 3,
      "juz": 27,
      "manzil": 7,
      "page": 526,
      "ruku": 460,
      "hizbQuarter": 210,
      "sajda": false
    },
    {
      "number": 4788,
      "text": "Ucapannya itu tiada lain hanyalah wahyu yang diwahyukan (kepadanya).",
      "numberInSurah": 4,
      "juz": 27,
      "manzil": 7,
      "page": 526,
      "ruku": 460,
      "hizbQuarter": 210,
      "sajda": false
    },
    {
      "number": 4789,
      "text": "yang diajarkan kepadanya oleh (Jibril) yang sangat kuat.",
      "numberInSurah": 5,
      "juz": 27,
      "manzil": 7,
      "page": 526,
      "ruku": 460,
      "hizbQuarter": 210,
      "sajda": false
    },
    {
      "number": 4790,
      "text": "yang mempunyai akal yang cerdas; dan (Jibril itu) menampakkan diri dengan rupa yang asli.",
      "numberInSurah": 6,
      "juz": 27,
      "manzil": 7,
      "page": 526,
      "ruku": 460,
      "hizbQuarter": 210,
      "sajda": false
    },
    {
      "number": 4791,
      "text": "sedang dia berada di ufuk yang tinggi.",
      "numberInSurah": 7,
      "juz": 27,
      "manzil": 7,
      "page": 526,
      "ruku": 460,
      "hizbQuarter": 210,
      "sajda": false
    },
    {
      "number": 4792,
      "text": "Kemudian dia mendekat, lalu bertambah dekat lagi.",
      "numberInSurah": 8,
      "juz": 27,
      "manzil": 7,
      "page": 526,
      "ruku": 460,
      "hizbQuarter": 210,
      "sajda": false
    },
    {
      "number": 4793,
      "text": "maka jadilah dia dekat (pada Muhammad sejarak) dua ujung busur panah atau lebih dekat (lagi).",
      "numberInSurah": 9,
      "juz": 27,
      "manzil": 7,
      "page": 526,
      "ruku": 460,
      "hizbQuarter": 210,
      "sajda": false
    },
    {
      "number": 4794,
      "text": "Lalu dia menyampaikan kepada hamba-Nya (Muhammad) apa yang telah Allah wahyukan.",
      "numberInSurah": 10,
      "juz": 27,
      "manzil": 7,
      "page": 526,
      "ruku": 460,
      "hizbQuarter": 210,
      "sajda": false
    },
    {
      "number": 4795,
      "text": "Hatinya tidak mendustakan apa yang telah dilihatnya.",
      "numberInSurah": 11,
      "juz": 27,
      "manzil": 7,
      "page": 526,
      "ruku": 460,
      "hizbQuarter": 210,
      "sajda": false
    },
    {
      "number": 4796,
      "text": "Maka apakah kaum (musyrik Mekah) hendak membantahnya tentang apa yang telah dilihatnya?",
      "numberInSurah": 12,
      "juz": 27,
      "manzil": 7,
      "page": 526,
      "ruku": 460,
      "hizbQuarter": 210,
      "sajda": false
    },
    {
      "number": 4797,
      "text": "Dan sesungguhnya Muhammad telah melihat Jibril itu (dalam rupanya yang asli) pada waktu yang lain,",
      "numberInSurah": 13,
      "juz": 27,
      "manzil": 7,
      "page": 526,
      "ruku": 460,
      "hizbQuarter": 210,
      "sajda": false
    },
    {
      "number": 4798,
      "text": "(yaitu) di Sidratil Muntaha.",
      "numberInSurah": 14,
      "juz": 27,
      "manzil": 7,
      "page": 526,
      "ruku": 460,
      "hizbQuarter": 210,
      "sajda": false
    },
    {
      "number": 4799,
      "text": "Di dekatnya ada surga tempat tinggal,",
      "numberInSurah": 15,
      "juz": 27,
      "manzil": 7,
      "page": 526,
      "ruku": 460,
      "hizbQuarter": 210,
      "sajda": false
    },
    {
      "number": 4800,
      "text": "(Muhammad melihat Jibril) ketika Sidratil Muntaha diliputi oleh sesuatu yang meliputinya.",
      "numberInSurah": 16,
      "juz": 27,
      "manzil": 7,
      "page": 526,
      "ruku": 460,
      "hizbQuarter": 210,
      "sajda": false
    },
    {
      "number": 4801,
      "text": "Penglihatannya (muhammad) tidak berpaling dari yang dilihatnya itu dan tidak (pula) melampauinya.",
      "numberInSurah": 17,
      "juz": 27,
      "manzil": 7,
      "page": 526,
      "ruku": 460,
      "hizbQuarter": 210,
      "sajda": false
    },
    {
      "number": 4802,
      "text": "Sesungguhnya dia telah melihat sebahagian tanda-tanda (kekuasaan) Tuhannya yang paling besar.",
      "numberInSurah": 18,
      "juz": 27,
      "manzil": 7,
      "page": 526,
      "ruku": 460,
      "hizbQuarter": 210,
      "sajda": false
    },
    {
      "number": 4803,
      "text": "Maka apakah patut kamu (hai orang-orang musyrik) menganggap al Lata dan al Uzza,",
      "numberInSurah": 19,
      "juz": 27,
      "manzil": 7,
      "page": 526,
      "ruku": 460,
      "hizbQuarter": 210,
      "sajda": false
    },
    {
      "number": 4804,
      "text": "dan Manah yang ketiga, yang paling terkemudian (sebagai anak perempuan Allah)?",
      "numberInSurah": 20,
      "juz": 27,
      "manzil": 7,
      "page": 526,
      "ruku": 460,
      "hizbQuarter": 210,
      "sajda": false
    },
    {
      "number": 4805,
      "text": "Apakah (patut) untuk kamu (anak) laki-laki dan untuk Allah (anak) perempuan?",
      "numberInSurah": 21,
      "juz": 27,
      "manzil": 7,
      "page": 526,
      "ruku": 460,
      "hizbQuarter": 210,
      "sajda": false
    },
    {
      "number": 4806,
      "text": "Yang demikian itu tentulah suatu pembagian yang tidak adil.",
      "numberInSurah": 22,
      "juz": 27,
      "manzil": 7,
      "page": 526,
      "ruku": 460,
      "hizbQuarter": 210,
      "sajda": false
    },
    {
      "number": 4807,
      "text": "Itu tidak lain hanyalah nama-nama yang kamu dan bapak-bapak kamu mengadakannya; Allah tidak menurunkan suatu keteranganpun untuk (menyembah)nya. Mereka tidak lain hanyalah mengikuti sangkaan-sangkaan, dan apa yang diingini oleh hawa nafsu mereka dan sesungguhnya telah datang petunjuk kepada mereka dari Tuhan mereka.",
      "numberInSurah": 23,
      "juz": 27,
      "manzil": 7,
      "page": 526,
      "ruku": 460,
      "hizbQuarter": 210,
      "sajda": false
    },
    {
      "number": 4808,
      "text": "Atau apakah manusia akan mendapat segala yang dicita-citakannya?",
      "numberInSurah": 24,
      "juz": 27,
      "manzil": 7,
      "page": 526,
      "ruku": 460,
      "hizbQuarter": 210,
      "sajda": false
    },
    {
      "number": 4809,
      "text": "(Tidak), maka hanya bagi Allah kehidupan akhirat dan kehidupan dunia.",
      "numberInSurah": 25,
      "juz": 27,
      "manzil": 7,
      "page": 526,
      "ruku": 460,
      "hizbQuarter": 210,
      "sajda": false
    },
    {
      "number": 4810,
      "text": "Dan berapa banyaknya malaikat di langit, syafa'at mereka sedikitpun tidak berguna, kecuali sesudah Allah mengijinkan bagi orang yang dikehendaki dan diridhai (Nya).",
      "numberInSurah": 26,
      "juz": 27,
      "manzil": 7,
      "page": 526,
      "ruku": 461,
      "hizbQuarter": 211,
      "sajda": false
    },
    {
      "number": 4811,
      "text": "Sesungguhnya orang-orang yang tiada beriman kepada kehidupan akhirat, mereka benar-benar menamakan malaikat itu dengan nama perempuan.",
      "numberInSurah": 27,
      "juz": 27,
      "manzil": 7,
      "page": 527,
      "ruku": 461,
      "hizbQuarter": 211,
      "sajda": false
    },
    {
      "number": 4812,
      "text": "Dan mereka tidak mempunyai sesuatu pengetahuanpun tentang itu. Mereka tidak lain hanyalah mengikuti persangkaan sedang sesungguhnya persangkaan itu tiada berfaedah sedikitpun terhadap kebenaran.",
      "numberInSurah": 28,
      "juz": 27,
      "manzil": 7,
      "page": 527,
      "ruku": 461,
      "hizbQuarter": 211,
      "sajda": false
    },
    {
      "number": 4813,
      "text": "Maka berpalinglah (hai Muhammad) dari orang yang berpaling dari peringatan Kami, dan tidak mengingini kecuali kehidupan duniawi.",
      "numberInSurah": 29,
      "juz": 27,
      "manzil": 7,
      "page": 527,
      "ruku": 461,
      "hizbQuarter": 211,
      "sajda": false
    },
    {
      "number": 4814,
      "text": "Itulah sejauh-jauh pengetahuan mereka. Sesungguhnya Tuhanmu, Dialah yang paling mengetahui siapa yang tersesat dari jalan-Nya dan Dia pulalah yang paling mengetahui siapa yang mendapat petunjuk.",
      "numberInSurah": 30,
      "juz": 27,
      "manzil": 7,
      "page": 527,
      "ruku": 461,
      "hizbQuarter": 211,
      "sajda": false
    },
    {
      "number": 4815,
      "text": "Dan hanya kepunyaan Allah-lah apa yang ada di langit dan apa yang ada di bumi supaya Dia memberi balasan kepada orang-orang yang berbuat jahat terhadap apa yang telah mereka kerjakan dan memberi balasan kepada orang-orang yang berbuat baik dengan pahala yang lebih baik (surga).",
      "numberInSurah": 31,
      "juz": 27,
      "manzil": 7,
      "page": 527,
      "ruku": 461,
      "hizbQuarter": 211,
      "sajda": false
    },
    {
      "number": 4816,
      "text": "(Yaitu) orang-orang yang menjauhi dosa-dosa besar dan perbuatan keji yang selain dari kesalahan-kesalahan kecil. Sesungguhnya Tuhanmu maha luas ampunan-Nya. Dan Dia lebih mengetahui (tentang keadaan)mu ketika Dia menjadikan kamu dari tanah dan ketika kamu masih janin dalam perut ibumu; maka janganlah kamu mengatakan dirimu suci. Dialah yang paling mengetahui tentang orang yang bertakwa.",
      "numberInSurah": 32,
      "juz": 27,
      "manzil": 7,
      "page": 527,
      "ruku": 461,
      "hizbQuarter": 211,
      "sajda": false
    },
    {
      "number": 4817,
      "text": "Maka apakah kamu melihat orang yang berpaling (dari Al-Quran)?",
      "numberInSurah": 33,
      "juz": 27,
      "manzil": 7,
      "page": 527,
      "ruku": 462,
      "hizbQuarter": 211,
      "sajda": false
    },
    {
      "number": 4818,
      "text": "serta memberi sedikit dan tidak mau memberi lagi?",
      "numberInSurah": 34,
      "juz": 27,
      "manzil": 7,
      "page": 527,
      "ruku": 462,
      "hizbQuarter": 211,
      "sajda": false
    },
    {
      "number": 4819,
      "text": "Apakah dia mempunyai pengetahuan tentang yang ghaib, sehingga dia mengetahui (apa yang dikatakan)?",
      "numberInSurah": 35,
      "juz": 27,
      "manzil": 7,
      "page": 527,
      "ruku": 462,
      "hizbQuarter": 211,
      "sajda": false
    },
    {
      "number": 4820,
      "text": "Ataukah belum diberitakan kepadanya apa yang ada dalam lembaran-lembaran Musa?",
      "numberInSurah": 36,
      "juz": 27,
      "manzil": 7,
      "page": 527,
      "ruku": 462,
      "hizbQuarter": 211,
      "sajda": false
    },
    {
      "number": 4821,
      "text": "dan lembaran-lembaran Ibrahim yang selalu menyempurnakan janji?",
      "numberInSurah": 37,
      "juz": 27,
      "manzil": 7,
      "page": 527,
      "ruku": 462,
      "hizbQuarter": 211,
      "sajda": false
    },
    {
      "number": 4822,
      "text": "(yaitu) bahwasanya seorang yang berdosa tidak akan memikul dosa orang lain,",
      "numberInSurah": 38,
      "juz": 27,
      "manzil": 7,
      "page": 527,
      "ruku": 462,
      "hizbQuarter": 211,
      "sajda": false
    },
    {
      "number": 4823,
      "text": "dan bahwasanya seorang manusia tiada memperoleh selain apa yang telah diusahakannya,",
      "numberInSurah": 39,
      "juz": 27,
      "manzil": 7,
      "page": 527,
      "ruku": 462,
      "hizbQuarter": 211,
      "sajda": false
    },
    {
      "number": 4824,
      "text": "dan bahwasanya usaha itu kelak akan diperlihatkan (kepadanya).",
      "numberInSurah": 40,
      "juz": 27,
      "manzil": 7,
      "page": 527,
      "ruku": 462,
      "hizbQuarter": 211,
      "sajda": false
    },
    {
      "number": 4825,
      "text": "Kemudian akan diberi balasan kepadanya dengan balasan yang paling sempurna,",
      "numberInSurah": 41,
      "juz": 27,
      "manzil": 7,
      "page": 527,
      "ruku": 462,
      "hizbQuarter": 211,
      "sajda": false
    },
    {
      "number": 4826,
      "text": "dan bahwasanya kepada Tuhanmulah kesudahan (segala sesuatu),",
      "numberInSurah": 42,
      "juz": 27,
      "manzil": 7,
      "page": 527,
      "ruku": 462,
      "hizbQuarter": 211,
      "sajda": false
    },
    {
      "number": 4827,
      "text": "dan bahwasanya Dialah yang menjadikan orang tertawa dan menangis,",
      "numberInSurah": 43,
      "juz": 27,
      "manzil": 7,
      "page": 527,
      "ruku": 462,
      "hizbQuarter": 211,
      "sajda": false
    },
    {
      "number": 4828,
      "text": "dan bahwasanya Dialah yang mematikan dan menghidupkan,",
      "numberInSurah": 44,
      "juz": 27,
      "manzil": 7,
      "page": 527,
      "ruku": 462,
      "hizbQuarter": 211,
      "sajda": false
    },
    {
      "number": 4829,
      "text": "dan bahwasanya Dialah yang menciptakan berpasang-pasangan pria dan wanita.",
      "numberInSurah": 45,
      "juz": 27,
      "manzil": 7,
      "page": 528,
      "ruku": 462,
      "hizbQuarter": 211,
      "sajda": false
    },
    {
      "number": 4830,
      "text": "dari air mani, apabila dipancarkan.",
      "numberInSurah": 46,
      "juz": 27,
      "manzil": 7,
      "page": 528,
      "ruku": 462,
      "hizbQuarter": 211,
      "sajda": false
    },
    {
      "number": 4831,
      "text": "Dan bahwasanya Dialah yang menetapkan kejadian yang lain (kebangkitan sesudah mati),",
      "numberInSurah": 47,
      "juz": 27,
      "manzil": 7,
      "page": 528,
      "ruku": 462,
      "hizbQuarter": 211,
      "sajda": false
    },
    {
      "number": 4832,
      "text": "dan bahwasanya Dia yang memberikan kekayaan dan memberikan kecukupan,",
      "numberInSurah": 48,
      "juz": 27,
      "manzil": 7,
      "page": 528,
      "ruku": 462,
      "hizbQuarter": 211,
      "sajda": false
    },
    {
      "number": 4833,
      "text": "dan bahwasanya Dialah yang Tuhan (yang memiliki) bintang syi'ra,",
      "numberInSurah": 49,
      "juz": 27,
      "manzil": 7,
      "page": 528,
      "ruku": 462,
      "hizbQuarter": 211,
      "sajda": false
    },
    {
      "number": 4834,
      "text": "dan bahwasanya Dia telah membinasakan kaum 'Aad yang pertama,",
      "numberInSurah": 50,
      "juz": 27,
      "manzil": 7,
      "page": 528,
      "ruku": 462,
      "hizbQuarter": 211,
      "sajda": false
    },
    {
      "number": 4835,
      "text": "dan kaum Tsamud. Maka tidak seorangpun yang ditinggalkan-Nya (hidup).",
      "numberInSurah": 51,
      "juz": 27,
      "manzil": 7,
      "page": 528,
      "ruku": 462,
      "hizbQuarter": 211,
      "sajda": false
    },
    {
      "number": 4836,
      "text": "Dan kaum Nuh sebelum itu. Sesungguhnya mereka adalah orang-orang yang paling zalim dan paling durhaka,",
      "numberInSurah": 52,
      "juz": 27,
      "manzil": 7,
      "page": 528,
      "ruku": 462,
      "hizbQuarter": 211,
      "sajda": false
    },
    {
      "number": 4837,
      "text": "dan negeri-negeri kaum Luth yang telah dihancurkan Allah.",
      "numberInSurah": 53,
      "juz": 27,
      "manzil": 7,
      "page": 528,
      "ruku": 462,
      "hizbQuarter": 211,
      "sajda": false
    },
    {
      "number": 4838,
      "text": "lalu Allah menimpakan atas negeri itu azab besar yang menimpanya.",
      "numberInSurah": 54,
      "juz": 27,
      "manzil": 7,
      "page": 528,
      "ruku": 462,
      "hizbQuarter": 211,
      "sajda": false
    },
    {
      "number": 4839,
      "text": "Maka terhadap nikmat Tuhanmu yang manakah kamu ragu-ragu?",
      "numberInSurah": 55,
      "juz": 27,
      "manzil": 7,
      "page": 528,
      "ruku": 462,
      "hizbQuarter": 211,
      "sajda": false
    },
    {
      "number": 4840,
      "text": "Ini (Muhammad) adalah seorang pemberi peringatan di antara pemberi-pemberi peringatan yang terdahulu.",
      "numberInSurah": 56,
      "juz": 27,
      "manzil": 7,
      "page": 528,
      "ruku": 462,
      "hizbQuarter": 211,
      "sajda": false
    },
    {
      "number": 4841,
      "text": "Telah dekat terjadinya hari kiamat.",
      "numberInSurah": 57,
      "juz": 27,
      "manzil": 7,
      "page": 528,
      "ruku": 462,
      "hizbQuarter": 211,
      "sajda": false
    },
    {
      "number": 4842,
      "text": "Tidak ada yang akan menyatakan terjadinya hari itu selain Allah.",
      "numberInSurah": 58,
      "juz": 27,
      "manzil": 7,
      "page": 528,
      "ruku": 462,
      "hizbQuarter": 211,
      "sajda": false
    },
    {
      "number": 4843,
      "text": "Maka apakah kamu merasa heran terhadap pemberitaan ini?",
      "numberInSurah": 59,
      "juz": 27,
      "manzil": 7,
      "page": 528,
      "ruku": 462,
      "hizbQuarter": 211,
      "sajda": false
    },
    {
      "number": 4844,
      "text": "Dan kamu mentertawakan dan tidak menangis?",
      "numberInSurah": 60,
      "juz": 27,
      "manzil": 7,
      "page": 528,
      "ruku": 462,
      "hizbQuarter": 211,
      "sajda": false
    },
    {
      "number": 4845,
      "text": "Sedang kamu melengahkan(nya)?",
      "numberInSurah": 61,
      "juz": 27,
      "manzil": 7,
      "page": 528,
      "ruku": 462,
      "hizbQuarter": 211,
      "sajda": false
    },
    {
      "number": 4846,
      "text": "Maka bersujudlah kepada Allah dan sembahlah (Dia).",
      "numberInSurah": 62,
      "juz": 27,
      "manzil": 7,
      "page": 528,
      "ruku": 462,
      "hizbQuarter": 211,
      "sajda": {
        "id": 13,
        "recommended": false,
        "obligatory": true
      }
    }
  ],
